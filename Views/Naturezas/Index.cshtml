@model IEnumerable<Financeiro.Models.Natureza>
@{
    ViewBag.Title = "Naturezas";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">@ViewBag.Title</h2>
        <a asp-action="Novo" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Nova Natureza
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Nome</th>
                    <th style="width:160px">Natureza Médica</th>
                    <th style="width:100px">Ativo</th>
                    <th style="width:120px" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var n in Model)
                {
                    <tr>
                        <td>@n.Nome</td>
                        <td>@(n.NaturezaMedica ? "Sim" : "Não")</td>
                        <td>@(n.Ativo ? "Sim" : "Não")</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-primary"
                               asp-action="Editar"
                               asp-route-id="@n.Id">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
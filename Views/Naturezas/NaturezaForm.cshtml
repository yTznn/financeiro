@model Financeiro.Models.ViewModels.NaturezaViewModel
@{
    ViewBag.Title = Model.Id == 0 ? "Nova Natureza" : "Editar Natureza";
    Layout = "_Layout";
}

<h2 class="mb-4">@ViewBag.Title</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="@(Model.Id == 0 ? "Salvar" : "Atualizar")"
      method="post"
      class="row g-3">

    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="col-md-6">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome"
               placeholder="Ex.: Cardiologia"
               class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="col-md-3 form-check align-self-end">
        <input asp-for="NaturezaMedica" class="form-check-input" />
        <label asp-for="NaturezaMedica" class="form-check-label"></label>
    </div>

    <div class="col-md-3 form-check align-self-end">
        <input asp-for="Ativo" class="form-check-input" />
        <label asp-for="Ativo" class="form-check-label"></label>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">
            @(Model.Id == 0 ? "Salvar" : "Atualizar")
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
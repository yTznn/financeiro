@model Financeiro.Models.ViewModels.NaturezaViewModel
@{
    ViewBag.Title = Model.Id == 0 ? "Nova Natureza" : "Editar Natureza";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="mb-4 text-center">
        <h2 class="fw-bold text-primary">@ViewBag.Title</h2>
        <p class="text-muted">Preencha os dados abaixo para registrar a natureza desejada.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

            <form asp-action="@(Model.Id == 0 ? "Salvar" : "Atualizar")"
                  method="post"
                  class="row g-3 bg-light p-4 rounded shadow-sm">

                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <!-- Nome -->
                <div class="col-md-12">
                    <label asp-for="Nome" class="form-label fw-semibold"></label>
                    <input asp-for="Nome"
                           placeholder="Ex.: Cardiologia, Ortopedia, Cirurgia Geral..."
                           class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>

                <!-- Natureza Médica -->
                <div class="col-md-6 d-flex align-items-center">
                    <div class="form-check form-switch">
                        <input asp-for="NaturezaMedica" class="form-check-input" type="checkbox" role="switch" />
                        <label asp-for="NaturezaMedica" class="form-check-label ms-2"></label>
                    </div>
                </div>

                <!-- Ativo -->
                <div class="col-md-6 d-flex align-items-center">
                    <div class="form-check form-switch">
                        <input asp-for="Ativo" class="form-check-input" type="checkbox" role="switch" />
                        <label asp-for="Ativo" class="form-check-label ms-2"></label>
                    </div>
                </div>

                <!-- Botões -->
                <div class="col-12 mt-3">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-check-circle"></i> @(Model.Id == 0 ? "Salvar" : "Atualizar")
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
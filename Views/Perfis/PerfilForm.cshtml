@model Financeiro.Models.Perfil

@{
    ViewData["Title"] = Model.Id == 0 ? "Novo Perfil" : "Editar Perfil";
    bool isNovo = Model.Id == 0;
}

<div class="container py-4" style="max-width: 800px;">
    
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h3 class="fw-bold text-secondary mb-0">
            <i class="bi @(isNovo ? "bi-person-plus-fill" : "bi-person-gear") me-2"></i>@ViewData["Title"]
        </h3>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class='bi bi-arrow-left'></i> Voltar
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-3 animate__animated animate__fadeIn">
        <div class="card-body p-4">
            
            <form asp-action="@(isNovo ? "Salvar" : "Atualizar")" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                <div class="mb-4">
                    <label asp-for="Nome" class="form-label fw-bold text-secondary small text-uppercase">Nome do Perfil</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-shield-lock"></i></span>
                        <input asp-for="Nome" class="form-control form-control-lg border-start-0 ps-0" placeholder="Ex: Financeiro Sênior" required />
                    </div>
                    <div class="form-text text-muted">Nome identificador para o grupo de permissões.</div>
                    <span asp-validation-for="Nome" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="p-3 border rounded bg-light mb-4">
                    <div class="form-check form-switch">
                        <input asp-for="Ativo" class="form-check-input fs-5" type="checkbox" role="switch" id="ativoSwitch" style="cursor: pointer;" />
                        <label asp-for="Ativo" class="form-check-label fw-semibold ms-2" for="ativoSwitch" style="cursor: pointer;">
                            Perfil Ativo
                        </label>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end pt-3 border-top">
                    <a asp-action="Index" class="btn btn-light border px-4 me-md-2">
                        <i class="bi bi-x-circle me-2"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
                        <i class="bi bi-check-lg me-2"></i> @(isNovo ? "Salvar" : "Atualizar")
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    @if (TempData["Erro"] != null)
    {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Atenção',
                text: '@TempData["Erro"]'
            });
        </script>
    }

    <script>
        // Validação Visual do Bootstrap
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
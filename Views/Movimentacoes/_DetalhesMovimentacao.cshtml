@model Financeiro.Models.ViewModels.MovimentacaoViewModel
@using System.Globalization
@{ var ptBR = new CultureInfo("pt-BR"); }

<div class="row">
    <div class="col-md-8 border-end">
        <h6 class="fw-bold text-secondary mb-3"><i class="bx bx-layer me-1"></i>Rateio (Origem do Recurso)</h6>
        <table class="table table-sm table-borderless mb-0">
            <thead class="text-muted small border-bottom">
                <tr>
                    <th>Item de Orçamento</th>
                    <th>Instrumento</th>
                    <th class="text-end">Valor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Rateios)
                {
                    <tr>
                        @* [CORREÇÃO] Alterado de NomeNatureza para NomeItemOrcamento *@
                        <td class="fw-medium">@(item.NomeItemOrcamento ?? $"ID: {item.OrcamentoDetalheId}")</td>
                        
                        <td class="text-muted small">@(item.NomeInstrumento ?? $"ID: {item.InstrumentoId}")</td>
                        <td class="text-end fw-bold">@item.Valor</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-4 ps-4">
        <h6 class="fw-bold text-secondary mb-3"><i class="bx bx-paperclip me-1"></i>Comprovantes</h6>
        
        @if (Model.TemAnexoSalvo)
        {
            <div class="card bg-white border shadow-sm mb-2">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <i class="bx bxs-file-pdf text-danger fs-1 me-2"></i>
                        <div>
                            <div class="fw-bold small">Comprovante Anexado</div>
                            <div class="text-muted" style="font-size: 10px;">DISPONÍVEL</div>
                        </div>
                    </div>
                    <a href="@Url.Action("BaixarAnexo", "Movimentacoes", new { id = Model.Id })" target="_blank" class="btn btn-sm btn-outline-primary">
                        <i class="bx bx-download"></i> Baixar
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-secondary py-2 small text-center">
                <i class="bx bx-info-circle me-1"></i> Nenhum anexo vinculado.
            </div>
        }

        <div class="mt-3 pt-3 border-top">
            <small class="text-muted d-block mb-1">ID Interno: #@Model.Id</small>
            <small class="text-muted d-block">Data Pagamento: @Model.DataMovimentacao.ToString("dd/MM/yyyy")</small>
        </div>
    </div>
</div>
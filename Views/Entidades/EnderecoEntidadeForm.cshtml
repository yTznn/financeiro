@model int
@{
    ViewBag.Title = "Novo Endereço da Entidade";
    Layout = "_Layout";
    var entidadeId = Model; // Id da Entidade recebido como model
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="fw-bold text-primary">@ViewBag.Title</h2>
            <p class="text-muted mb-0">Preencha os dados do novo endereço da entidade.</p>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary"
               asp-controller="Entidades"
               asp-action="GerenciarEnderecos"
               asp-route-id="@entidadeId">
                <i class="bi bi-arrow-left-circle"></i> Voltar
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-controller="Entidades"
                  asp-action="SalvarEnderecoEntidade"
                  asp-route-id="@entidadeId"
                  method="post"
                  class="row g-3">

                @Html.AntiForgeryToken()

                <!-- Campos do endereço -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Logradouro</label>
                    <input name="Logradouro" class="form-control" placeholder="Rua / Avenida / Travessa" required />
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-semibold">Número</label>
                    <input name="Numero" class="form-control" placeholder="123 ou SN" required />
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-semibold">Complemento</label>
                    <input name="Complemento" class="form-control" placeholder="Quadra, lote, apto..." />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">CEP</label>
                    <input name="Cep" class="form-control" placeholder="75920000" pattern="\d{8}" />
                    <div class="form-text">Apenas 8 dígitos, sem traço.</div>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">Bairro</label>
                    <input name="Bairro" class="form-control" required />
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-semibold">Município</label>
                    <input name="Municipio" class="form-control" required />
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-semibold">UF</label>
                    <input name="Uf" class="form-control text-uppercase" maxlength="2" pattern="[A-Za-z]{2}" required />
                </div>

                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="DefinirPrincipal" name="DefinirPrincipal" />
                        <label class="form-check-label" for="DefinirPrincipal">
                            Definir como endereço principal
                        </label>
                    </div>
                </div>

                <div class="col-12 mt-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Salvar
                    </button>
                    <a class="btn btn-outline-secondary ms-2"
                       asp-controller="Entidades"
                       asp-action="GerenciarEnderecos"
                       asp-route-id="@entidadeId">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
@model IEnumerable<Financeiro.Models.Entidade>
@{
    ViewData["Title"] = "Entidades";
}

<h2 class="mb-3">Entidades</h2>

<a asp-action="Create" class="btn btn-sm btn-primary mb-2">
    <i class='bx bx-plus-circle'></i> Nova Entidade
</a>

<table class="table table-striped table-sm">
    <thead class="table-light">
        <tr>
            <th>Nome</th>
            <th>Sigla</th>
            <th>CNPJ</th>
            <th>Ativa</th>
            <th style="width:160px;">Ações</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.Nome</td>
            <td>@e.Sigla</td>
            <td>@e.Cnpj</td>
            <td>@(e.Ativo ? "Sim" : "Não")</td>
            <td>
                <!-- Endereços -->
                <a asp-action="GerenciarEnderecos"
                   asp-route-id="@e.Id"
                   class="btn btn-sm btn-outline-secondary"
                   title="Gerenciar Endereços">
                    <i class='bx bx-map'></i>
                </a>

                <!-- Editar -->
                <a asp-action="Edit" asp-route-id="@e.Id"
                   class="btn btn-sm btn-outline-primary" title="Editar">
                    <i class='bx bx-pencil'></i>
                </a>

                <!-- Excluir (será transformado em alerta em passo dedicado) -->
                <button class="btn btn-sm btn-outline-danger js-delete"
                        data-id="@e.Id" data-nome="@e.Nome" title="Excluir">
                    <i class='bx bx-trash'></i>
                </button>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <script>
        document.querySelectorAll('.js-delete').forEach(btn => {
            btn.addEventListener('click', () => {
                const { id, nome } = btn.dataset;
                SwalDelete.fire({
                    title: 'Excluir entidade?',
                    text: `Tem certeza que deseja excluir "${nome}"?`,
                    showCancelButton: true,
                    confirmButtonText: 'Sim, excluir',
                    cancelButtonText: 'Cancelar'
                }).then(r => {
                    if (r.isConfirmed) {
                        fetch(`/Entidades/Delete/${id}`, { method: 'POST' })
                            .then(resp => resp.json())
                            .then(j => SwalDefault.fire(j.mensagem, '', j.sucesso ? 'success' : 'error')
                                .then(() => location.reload()));
                    }
                });
            });
        });
    </script>
}
@model Financeiro.Models.ViewModels.RecebimentoViewModel

@{
    ViewData["Title"] = Model.Id == 0 ? "Novo Recebimento" : "Editar Recebimento";
    var action = Model.Id == 0 ? "Salvar" : "Atualizar";
}

<div class="container py-4" style="max-width: 700px;">
    
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h3 class="fw-bold text-secondary mb-0">@ViewData["Title"]</h3>
            <small class="text-muted">Instrumento Nº <strong>@Model.InstrumentoNumero</strong></small>
        </div>
        <a asp-action="Index" asp-route-instrumentoId="@Model.InstrumentoId" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger shadow-sm border-0 mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Erro"]
        </div>
    }

    <div class="card shadow-sm border-0 rounded-3 animate__animated animate__fadeIn">
        <div class="card-body p-4">
            <form asp-action="@action" method="post" id="form-recebimento" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="InstrumentoId" />
                
                <input type="hidden" asp-for="Valor" id="ValorHidden" 
                       value="@(Model.Valor > 0 ? Model.Valor.ToString("F2", System.Globalization.CultureInfo.InvariantCulture) : "")" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="DataInicio" class="form-label fw-bold text-secondary small text-uppercase">Mês de Referência</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-calendar-month"></i></span>
                            <input asp-for="DataInicio" class="form-control form-control-lg border-start-0 ps-0" type="month" required />
                        </div>
                        <div class="form-text">O sistema calculará a vigência completa do mês.</div>
                        <span asp-validation-for="DataInicio" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label for="ValorVisual" class="form-label fw-bold text-secondary small text-uppercase">Valor do Repasse</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-success fw-bold">R$</span>
                            <input id="ValorVisual" type="text" class="form-control form-control-lg border-start-0 ps-0 fw-bold text-dark" 
                                   placeholder="0,00" autocomplete="off" required />
                        </div>
                        <span asp-validation-for="Valor" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Observacao" class="form-label fw-bold text-secondary small text-uppercase">Observações</label>
                        <textarea asp-for="Observacao" class="form-control" rows="3" placeholder="Ex: Parcela referente ao aditivo 01..."></textarea>
                        <span asp-validation-for="Observacao" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end pt-4 mt-2 border-top">
                    <a asp-action="Index" asp-route-instrumentoId="@Model.InstrumentoId" class="btn btn-light border px-4 me-md-2">Cancelar</a>
                    <button type="submit" class="btn btn-success btn-lg px-5 shadow-sm">
                        <i class="bi bi-check-lg me-2"></i> Salvar Lançamento
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const inputVisual = document.getElementById('ValorVisual');
            const inputHidden = document.getElementById('ValorHidden');
            const form = document.getElementById('form-recebimento');

            // 1. Função para formatar moeda BRL enquanto digita
            const formatarMoeda = (valor) => {
                // Remove tudo que não é dígito
                valor = valor.replace(/\D/g, "");
                
                // Converte para número e divide por 100 para ter os centavos
                let numero = (parseInt(valor) / 100).toFixed(2) + "";
                
                // Troca ponto por vírgula
                numero = numero.replace(".", ",");
                
                // Adiciona separador de milhar
                numero = numero.replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1.");
                
                return numero;
            };

            // 2. Evento de Digitação (Input)
            inputVisual.addEventListener('input', function (e) {
                // Evita valores vazios ou NaN
                if(e.target.value === "") {
                    e.target.value = "0,00";
                    return;
                }
                e.target.value = formatarMoeda(e.target.value);
            });

            // 3. Inicialização (Caso seja Edição)
            if (inputHidden.value) {
                // O valor vem do C# como "1500.50" (ponto)
                // Precisamos converter para "1.500,50" para o visual
                let valorInicial = parseFloat(inputHidden.value).toFixed(2); // "1500.50"
                
                // Gambiarra simples para formatar inicial: remove ponto, formata como se fosse digitado
                let valorSemPonto = valorInicial.replace(".", ""); 
                inputVisual.value = formatarMoeda(valorSemPonto);
            }

            // 4. Preparar para Salvar (Submit)
            form.addEventListener('submit', function (e) {
                // Pega o valor visual (ex: "1.500,50")
                let valorFormatado = inputVisual.value;
                
                if (!valorFormatado) {
                    inputHidden.value = "0";
                    return;
                }

                // Limpa: Remove pontos de milhar e troca vírgula por ponto
                // Ex: "1.500,50" -> "1500,50" -> "1500.50"
                let valorLimpo = valorFormatado.replace(/\./g, "").replace(",", ".");
                
                // Joga no hidden input que o ASP.NET vai ler
                inputHidden.value = valorLimpo;
                
                // Validação do Bootstrap
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                form.classList.add('was-validated');
            });
        });
    </script>
}
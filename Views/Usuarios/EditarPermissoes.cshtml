@model Financeiro.Models.ViewModels.UsuarioPermissoesEdicaoViewModel

@{
    ViewBag.Title = "Gerenciar Permissões";
    Layout = "_Layout";
    int contador = 0; // Contador manual para garantir IDs únicos
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0 text-dark">Permissões de Acesso</h2>
        <p class="text-muted mb-0">
            Usuário: <strong class="text-primary">@Model.NomeUsuario</strong> <span class="text-secondary small">(@Model.EmailUsuario)</span>
        </p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
        <i class="bi bi-arrow-left me-1"></i> Voltar
    </a>
</div>

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success shadow-sm border-0 mb-4">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["MensagemSucesso"]
    </div>
}

<form asp-action="SalvarPermissoes" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="usuarioId" value="@Model.UsuarioId" />

    <div class="accordion shadow-sm" id="accordionPermissoes" style="border-radius: 12px; overflow: hidden;">
        
        @foreach (var modulo in Model.Modulos)
        {
            // Gera IDs únicos baseados no contador
            var collapseId = "collapse_" + contador;
            var headerId = "heading_" + contador;
            
            // Dados para o resumo
            var total = modulo.Permissoes.Count;
            var ativos = modulo.Permissoes.Count(p => p.Concedido);
            var badgeClass = ativos > 0 ? "bg-primary" : "bg-secondary";

            <div class="accordion-item border-0 border-bottom">
                <h2 class="accordion-header" id="@headerId">
                    <button class="accordion-button collapsed fw-bold text-dark bg-white" 
                            type="button" 
                            data-bs-toggle="collapse" 
                            data-bs-target="#@collapseId" 
                            aria-expanded="false" 
                            aria-controls="@collapseId">
                        
                        <i class="bi bi-folder2-open me-2 text-warning fs-5"></i> 
                        @modulo.NomeModulo
                        
                        <span class="badge @badgeClass ms-3 rounded-pill" style="font-size: 0.75rem; font-weight: normal;">
                            @ativos de @total ativos
                        </span>
                    </button>
                </h2>
                
                <div id="@collapseId" 
                     class="accordion-collapse collapse" 
                     aria-labelledby="@headerId" 
                     data-bs-parent="#accordionPermissoes">
                    
                    <div class="accordion-body bg-light">
                        <div class="row g-3">
                            @foreach (var permissao in modulo.Permissoes)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-body d-flex align-items-start">
                                            <div class="form-check w-100">
                                                <input class="form-check-input" type="checkbox" 
                                                       name="permissoesSelecionadas" 
                                                       value="@permissao.PermissaoId" 
                                                       id="perm_@permissao.PermissaoId"
                                                       @(permissao.Concedido ? "checked" : "")
                                                       @(permissao.HerdadoDoPerfil ? "disabled" : "")
                                                       style="transform: scale(1.2); margin-top: 0.3rem;">
                                                
                                                <label class="form-check-label ms-2 w-100 cursor-pointer" for="perm_@permissao.PermissaoId">
                                                    <span class="d-block fw-bold text-dark mb-1">@permissao.Nome</span>
                                                    <span class="d-block text-muted small" style="line-height: 1.2;">
                                                        @permissao.Descricao
                                                    </span>
                                                </label>
                                            </div>

                                            @if (permissao.HerdadoDoPerfil)
                                            {
                                                <span class="badge bg-secondary ms-2" 
                                                      data-bs-toggle="tooltip" 
                                                      title="Permissão herdada do Perfil">
                                                    <i class="bi bi-person-badge"></i> Perfil
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            
            // Incrementa contador para o próximo módulo
            contador++;
        }
    </div>

    <div class="d-flex gap-2 mt-4 pt-2">
        <button type="submit" class="btn btn-success rounded-pill px-4 shadow-sm">
            <i class="bi bi-check-lg me-1"></i> Salvar Permissões
        </button>
        <a asp-action="Index" class="btn btn-light rounded-pill px-4 text-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    
    <style>
        /* CSS para garantir o visual correto quando fechado/aberto */
        .accordion-button:not(.collapsed) {
            background-color: #f8f9fa;
            color: #0d6efd;
            box-shadow: none; 
        }
        .accordion-button:focus {
            box-shadow: none; 
            border-color: rgba(0,0,0,.125);
        }
        .cursor-pointer {
            cursor: pointer;
        }
    </style>

    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}
@model Financeiro.Models.ViewModels.UsuarioViewModel

@{
    bool isNovo = Model.Id == 0;
    ViewData["Title"] = isNovo ? "Novo Usuário" : "Editar Usuário";
    bool isAdmin = User.IsInRole("Administrador");
}

<style>
    .select2-container--bootstrap-5 .select2-selection {
        border-color: #dee2e6;
        padding: 0.5rem 1rem;
        min-height: 48px; /* Altura padrão dos inputs */
    }
    .select2-container--bootstrap-5 .select2-selection--single {
        display: flex;
        align-items: center;
    }
    
    .hover-shadow-card:hover {
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.08)!important;
        transition: box-shadow 0.3s ease;
    }

    .upload-area {
        border: 2px dashed #dee2e6;
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        background-color: #f8f9fa;
        transition: all 0.2s;
        cursor: pointer;
    }
    .upload-area:hover {
        background-color: #fff;
        border-color: #0d6efd;
    }
</style>

<div class="container py-4" style="max-width: 1000px;">
    
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">
                <i class="bi @(isNovo ? "bi-person-plus-fill" : "bi-pencil-square") text-primary me-2"></i>@ViewData["Title"]
            </h2>
            <small class="text-muted">Preencha as informações para @(isNovo ? "criar um novo" : "atualizar o") cadastro.</small>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class='bi bi-arrow-left me-1'></i> Voltar
        </a>
    </div>

    <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm border-0 mb-4" role="alert"></div>

    <form asp-action="@(isNovo ? "Salvar" : "Atualizar")" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" />

        <div class="row g-4">
            
            <div class="col-lg-7">
                <div class="card shadow-sm border-0 rounded-4 hover-shadow-card h-100">
                    <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0">
                        <h5 class="fw-bold text-dark"><i class="bi bi-person-vcard text-primary me-2"></i>Dados de Acesso</h5>
                    </div>
                    <div class="card-body p-4">
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="NameSkip" class="form-label fw-bold text-secondary small text-uppercase">Usuário (Login)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-person"></i></span>
                                    <input asp-for="NameSkip" class="form-control form-control-lg border-start-0 ps-0" 
                                           placeholder="Ex: joao.silva" readonly="@(!isAdmin)" required />
                                </div>
                                <span asp-validation-for="NameSkip" class="text-danger small mt-1"></span>
                            </div>

                            <div class="col-md-6">
                                @if (isNovo || isAdmin)
                                {
                                    <label asp-for="PerfilId" class="form-label fw-bold text-secondary small text-uppercase">Perfil de Acesso</label>
                                    <select asp-for="PerfilId" class="form-select form-select-lg" asp-items="Model.PerfisDisponiveis" required>
                                        <option value="">Selecione...</option>
                                    </select>
                                    <span asp-validation-for="PerfilId" class="text-danger small mt-1"></span>
                                }
                                else
                                {
                                    <input type="hidden" asp-for="PerfilId" />
                                }
                            </div>

                            <div class="col-12">
                                <label asp-for="Email" class="form-label fw-bold text-secondary small text-uppercase">E-mail</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control form-control-lg border-start-0 ps-0" 
                                           placeholder="nome@empresa.com.br" readonly="@(!isAdmin)" required type="email"/>
                                </div>
                                <span asp-validation-for="Email" class="text-danger small mt-1"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="PessoaFisicaId" class="form-label fw-bold text-secondary small text-uppercase">Colaborador (PF)</label>
                                <select asp-for="PessoaFisicaId" class="form-select form-select-lg" asp-items="Model.PessoasFisicas">
                                    <option value="">-- Sem vínculo --</option>
                                </select>
                                <div class="form-text">Vincule este usuário a um cadastro de Pessoa Física existente.</div>
                                <span asp-validation-for="PessoaFisicaId" class="text-danger small mt-1"></span>
                            </div>

                            <div class="col-12"><hr class="text-muted opacity-25 my-2"></div>

                            <div class="col-md-6">
                                <label asp-for="Senha" class="form-label fw-bold text-secondary small text-uppercase">
                                    Senha @(!isNovo ? "(Opcional)" : "")
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-key"></i></span>
                                    <input asp-for="Senha" type="password" class="form-control form-control-lg border-start-0 ps-0" 
                                           placeholder="••••••••" required="@(isNovo)" />
                                </div>
                                <span asp-validation-for="Senha" class="text-danger small mt-1"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ConfirmarSenha" class="form-label fw-bold text-secondary small text-uppercase">Confirmar Senha</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-check2-square"></i></span>
                                    <input asp-for="ConfirmarSenha" type="password" class="form-control form-control-lg border-start-0 ps-0" 
                                           placeholder="••••••••" required="@(isNovo)" />
                                </div>
                                <span asp-validation-for="ConfirmarSenha" class="text-danger small mt-1"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="vstack gap-4">
                    
                    <div class="card shadow-sm border-0 rounded-4 hover-shadow-card">
                        <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0">
                            <h5 class="fw-bold text-dark"><i class="bi bi-camera text-primary me-2"></i>Avatar</h5>
                        </div>
                        <div class="card-body p-4 text-center">
                            <div class="position-relative d-inline-block mb-3">
                                <div class="rounded-circle border border-3 border-light shadow-sm overflow-hidden bg-light d-flex align-items-center justify-content-center" 
                                     style="width: 120px; height: 120px;">
                                    @if (!string.IsNullOrEmpty(Model.HashImagem))
                                    {
                                        <img id="imgPreview" src="/Usuarios/ImagemPerfil?hash=@Model.HashImagem" class="w-100 h-100 object-fit-cover" />
                                    }
                                    else
                                    {
                                        <i id="iconPreview" class="bi bi-person-fill text-secondary" style="font-size: 4rem;"></i>
                                        <img id="imgPreview" class="d-none w-100 h-100 object-fit-cover" />
                                    }
                                </div>
                            </div>
                            
                            <div class="upload-area" onclick="document.getElementById('uploadFoto').click()">
                                <i class="bi bi-cloud-arrow-up text-primary fs-3"></i>
                                <div class="fw-bold text-dark mt-1">Clique para enviar</div>
                                <div class="small text-muted">ou arraste uma imagem aqui</div>
                            </div>
                            <input asp-for="ImagemPerfil" id="uploadFoto" type="file" class="d-none" accept="image/*" onchange="previewImage(this)" />
                            <span asp-validation-for="ImagemPerfil" class="text-danger small mt-1"></span>
                        </div>
                    </div>

                    <div class="card shadow-sm border-0 rounded-4 hover-shadow-card">
                        <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0">
                            <h5 class="fw-bold text-dark"><i class="bi bi-building text-primary me-2"></i>Entidades</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="mb-4">
                                <label class="form-label fw-bold text-secondary small text-uppercase">Entidades Vinculadas</label>
                                <select asp-for="EntidadesSelecionadas" asp-items="Model.TodasEntidades" 
                                        class="form-select" multiple id="selEntidades" style="width:100%;">
                                </select>
                                <span asp-validation-for="EntidadesSelecionadas" class="text-danger small mt-1"></span>
                            </div>

                            <div class="mb-2">
                                <label class="form-label fw-bold text-secondary small text-uppercase">Entidade Principal (Padrão)</label>
                                <select asp-for="EntidadeAtivaId" class="form-select form-select-lg bg-light" id="selEntidadeAtiva" style="width:100%;">
                                    <option value="">-- Selecione primeiro acima --</option>
                                </select>
                                <span asp-validation-for="EntidadeAtivaId" class="text-danger small mt-1"></span>
                            </div>
                            
                            <div class="alert alert-info border-0 d-flex align-items-center p-2 mt-3 mb-0 rounded-3">
                                <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                                <div class="small" style="line-height: 1.2;">
                                    A <strong>Entidade Principal</strong> será carregada automaticamente ao fazer login.
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end pt-4 mt-3 border-top">
            <a asp-action="Index" class="btn btn-light btn-lg px-4 border text-secondary fw-bold rounded-pill">Cancelar</a>
            <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm fw-bold rounded-pill">
                <i class="bi bi-check-lg me-2"></i> @(isNovo ? "Cadastrar Usuário" : "Salvar Alterações")
            </button>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // 1. Inicializa Select2 com tema Bootstrap 5
            $('#selEntidades').select2({
                theme: 'bootstrap-5',
                placeholder: 'Clique para selecionar...',
                allowClear: true,
                closeOnSelect: false // Permite selecionar vários sem fechar
            });

            // 2. Lógica Dinâmica para Entidade Ativa
            const $selEntidades = $('#selEntidades');
            const $selAtiva = $('#selEntidadeAtiva');

            function atualizarDropdownAtiva() {
                const selecionadas = $selEntidades.val() || [];
                const valorAtualAtiva = $selAtiva.val();

                // Limpa e recria as opções baseadas no que foi selecionado
                $selAtiva.empty();
                
                if (selecionadas.length === 0) {
                    $selAtiva.append('<option value="">-- Nenhuma entidade vinculada --</option>');
                } else {
                    $selAtiva.append('<option value="">-- Escolha a principal --</option>');
                    
                    // Pega o texto de cada opção selecionada
                    $('#selEntidades option:selected').each(function() {
                        $selAtiva.append(new Option($(this).text(), $(this).val()));
                    });

                    // Tenta manter o valor selecionado se ele ainda existir
                    if (selecionadas.includes(valorAtualAtiva)) {
                        $selAtiva.val(valorAtualAtiva);
                    } else if (selecionadas.length > 0) {
                        // Se perdeu o valor (ex: removeu a entidade), seleciona a primeira por padrão
                        $selAtiva.val(selecionadas[0]);
                    }
                }
            }

            // Bind no evento change
            $selEntidades.on('change', atualizarDropdownAtiva);
            
            // Executa na carga inicial (edição)
            atualizarDropdownAtiva();

            // 3. Validação Bootstrap
            (function () {
                'use strict'
                var forms = document.querySelectorAll('.needs-validation')
                Array.prototype.slice.call(forms).forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
            })()
        });

        // 4. Preview de Imagem (JS Puro)
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var img = document.getElementById('imgPreview');
                    var icon = document.getElementById('iconPreview');
                    
                    if(icon) icon.classList.add('d-none');
                    img.classList.remove('d-none');
                    img.src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
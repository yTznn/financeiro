@using Financeiro.Models         <!-- para o enum -->
@model Financeiro.Models.ViewModels.AditivoViewModel

@{
    ViewBag.Title = "Registrar Aditivo";
    Layout = "_Layout";
    var atual = ViewBag.VersaoAtual as Financeiro.Models.AcordoVersao;
}

<h2 class="mb-4">@ViewBag.Title</h2>

@if (atual != null)
{
    <!-- Bloco de referência: dados da versão atual -->
    <div class="alert alert-info">
        <strong>Versão Atual (v@(atual.Versao)):</strong><br />
        Valor = @atual.Valor.ToString("C") |
        Vigência = @atual.VigenciaInicio.ToShortDateString() -
                    @(atual.VigenciaFim?.ToShortDateString() ?? "atual")
    </div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Salvar"
      method="post"
      class="row g-3">

    @Html.AntiForgeryToken()
    <input asp-for="TipoAcordoId" type="hidden" />

    <!-- Tipo de aditivo -->
    <div class="col-md-4">
        <label asp-for="TipoAditivo" class="form-label"></label>
        <select asp-for="TipoAditivo"
                asp-items="Html.GetEnumSelectList<TipoAditivo>()"
                class="form-select"
                id="selectTipo">
            <option value="">-- selecione --</option>
        </select>
        <span asp-validation-for="TipoAditivo" class="text-danger"></span>
    </div>

    <!-- Novo Valor -->
    <div class="col-md-4">
        <label asp-for="NovoValor" class="form-label"></label>
        <input asp-for="NovoValor" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="NovoValor" class="text-danger"></span>
    </div>

    <!-- Nova Vigência -->
    <div class="col-md-4">
        <label asp-for="NovaDataInicio" class="form-label"></label>
        <input asp-for="NovaDataInicio" type="date" class="form-control" />
        <span asp-validation-for="NovaDataInicio" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="NovaDataFim" class="form-label"></label>
        <input asp-for="NovaDataFim" type="date" class="form-control" />
        <span asp-validation-for="NovaDataFim" class="text-danger"></span>
    </div>

    <!-- Metadados -->
    <div class="col-md-4">
        <label asp-for="DataAssinatura" class="form-label"></label>
        <input asp-for="DataAssinatura" type="date" class="form-control" />
        <span asp-validation-for="DataAssinatura" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Observacao" class="form-label"></label>
        <textarea asp-for="Observacao" rows="2" class="form-control"></textarea>
        <span asp-validation-for="Observacao" class="text-danger"></span>
    </div>

    <!-- Botões -->
    <div class="col-12">
        <button type="submit" class="btn btn-success">Salvar Aditivo</button>
        <a asp-controller="TipoAcordos"
           asp-action="Editar"
           asp-route-id="@Model.TipoAcordoId"
           class="btn btn-secondary ms-2">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Exibe/oculta campos conforme o tipo selecionado
        const select = document.getElementById('selectTipo');
        const campoValor = document.querySelector('[asp-for="NovoValor"]')?.closest('.col-md-4');
        const campoInicio = document.querySelector('[asp-for="NovaDataInicio"]')?.closest('.col-md-4');
        const campoFim = document.querySelector('[asp-for="NovaDataFim"]')?.closest('.col-md-4');

        function toggleCampos() {
            const v = select.value;
            const alteraPrazo = v == "Prazo" || v == "PrazoAcrescimo" || v == "PrazoSupressao";
            const alteraValor = v == "Acrescimo" || v == "Supressao" || v == "PrazoAcrescimo" || v == "PrazoSupressao";

            campoValor.style.display  = alteraValor ? '' : 'none';
            campoInicio.style.display = alteraPrazo ? '' : 'none';
            campoFim.style.display    = alteraPrazo ? '' : 'none';
        }

        select.addEventListener('change', toggleCampos);
        document.addEventListener('DOMContentLoaded', toggleCampos);
    </script>
}
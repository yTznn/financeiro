@model Financeiro.Models.ViewModels.PessoaJuridicaViewModel
@{
    ViewBag.Title = Model.Id == 0 ? "Nova Pessoa Jurídica" : "Editar Pessoa Jurídica";
    Layout = "_Layout";
}

<style>
    body { background-color: #f8f9fa; }
    .form-card { border-radius: 0.75rem; border: 1px solid #dee2e6; }
    .card-header-icon {
        width: 50px;
        height: 50px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background-color: rgba(var(--bs-primary-rgb), 0.1);
        color: var(--bs-primary);
        font-size: 1.75rem;
    }
    .input-group-text { background-color: #e9ecef; border: 1px solid #ced4da;}
</style>

<div id="pageFlags" data-success="@TempData["Sucesso"]" data-error="@TempData["Erro"]"></div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm form-card">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <div class="card-header-icon mb-3">
                             <i class='bx bxs-business'></i>
                        </div>
                        <h2 class="fw-bold">@ViewBag.Title</h2>
                        <p class="text-muted">Preencha as informações abaixo para continuar.</p>
                    </div>

                    <form asp-controller="PessoasJuridicas" asp-action="@(Model.Id == 0 ? "Salvar" : "Atualizar")" method="post">
                        @Html.AntiForgeryToken()
                        <input asp-for="Id" type="hidden" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <h5 class="mb-3 fw-light text-primary border-bottom pb-2">Dados da Empresa</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <label asp-for="RazaoSocial" class="form-label"></label>
                                <input asp-for="RazaoSocial" class="form-control" placeholder="Nome de registro da empresa" />
                                <span asp-validation-for="RazaoSocial" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NomeFantasia" class="form-label"></label>
                                <input asp-for="NomeFantasia" class="form-control" placeholder="Nome comercial" />
                                <span asp-validation-for="NomeFantasia" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NumeroInscricao" class="form-label">CNPJ</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bx bx-id-card"></i></span>
                                    <input asp-for="NumeroInscricao" class="form-control" placeholder="00.000.000/0000-00" />
                                </div>
                                <span asp-validation-for="NumeroInscricao" class="text-danger small"></span>
                            </div>
                        </div>

                        <h5 class="mb-3 fw-light text-primary border-bottom pb-2">Informações de Contato (Opcional)</h5>
                        <div class="row g-3 mb-4">
                             <div class="col-md-6">
                                <label asp-for="Email" class="form-label">E-mail</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                    @* data-val="false" inibe validação obrigatória no front *@
                                    <input asp-for="Email" class="form-control" placeholder="contato@empresa.com" data-val="false" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Telefone" class="form-label">Telefone</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bx bx-phone"></i></span>
                                    @* data-val="false" inibe validação obrigatória no front *@
                                    <input asp-for="Telefone" class="form-control" placeholder="(00) 0000-0000" data-val="false" />
                                </div>
                                <span asp-validation-for="Telefone" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="form-check form-switch mb-4">
                            <input asp-for="SituacaoAtiva" class="form-check-input" role="switch" />
                            <label asp-for="SituacaoAtiva" class="form-check-label">Fornecedor Ativo</label>
                        </div>
                        
                        <hr />

                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a asp-controller="Fornecedores" asp-action="Index" class="btn btn-outline-secondary px-4">Cancelar</a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bx bx-save me-1"></i> @(Model.Id == 0 ? "Salvar" : "Atualizar")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jquery-mask/jquery.mask.min.js"></script>
    <script>
        $(function () {
            $('#NumeroInscricao').mask('00.000.000/0000-00');
            $('#Telefone').mask('(00) 0000-00009').on('keyup', function(){
                var val  = $(this).val().replace(/\D/g,'');
                var mask = (val.length > 10) ? '(00) 00000-0000' : '(00) 0000-00009';
                $(this).mask(mask);
            });

            const flags = document.getElementById("pageFlags");
            if (flags) {
                const ok   = (flags.dataset.success || "").trim();
                const erro = (flags.dataset.error   || "").trim();
                if (ok) Swal.fire({ text: ok, icon: "success", toast: true, position: 'top-end', showConfirmButton: false, timer: 3500 });
                if (erro) Swal.fire({ text: erro, icon: "error" });
            }
        });
    </script>
}
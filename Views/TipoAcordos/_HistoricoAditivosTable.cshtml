@model IEnumerable<Financeiro.Models.AcordoVersao>

@{
    int totalPaginas = ViewBag.TotalPaginas ?? 1;
    int paginaAtual  = ViewBag.PaginaAtual  ?? 1;
}

<table class="table table-sm table-bordered table-hover table-striped align-middle">
    <thead class="table-light text-center">
        <tr>
            <th style="width:80px">Versão</th>
            <th>Vigência</th>
            <th style="width:120px">Valor</th>
            <th style="width:140px">Tipo Aditivo</th>
            <th style="width:120px">Assinatura</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td class="text-center fw-semibold">@v.Versao</td>
                <td class="text-center">
                    @v.VigenciaInicio:dd/MM/yyyy —
                    @(v.VigenciaFim?.ToString("dd/MM/yyyy") ?? "atual")
                </td>
                <td class="text-end">@v.Valor.ToString("C")</td>
                <td class="text-center">@((v.TipoAditivo?.ToString()) ?? "Original")</td>
                <td class="text-center">@((v.DataAssinatura?.ToString("dd/MM/yyyy")) ?? "-")</td>
            </tr>
        }
    </tbody>
</table>

@if (totalPaginas > 1)
{
    <nav>
        <ul class="pagination pagination-sm justify-content-center">
            @for (int p = 1; p <= totalPaginas; p++)
            {
                <li class="page-item @(p == paginaAtual ? "active" : "")">
                    <a class="page-link hist-page-link" href="#" data-pagina="@p">@p</a>
                </li>
            }
        </ul>
    </nav>
}
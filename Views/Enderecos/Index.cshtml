@model IEnumerable<Financeiro.Models.ViewModels.PessoaJuridicaListaViewModel>

@{
    ViewBag.Title = "Pessoas Jurídicas";
    Layout = "_Layout";
}

<h2 class="mb-4 fw-bold">
    <i class="bi bi-buildings me-2 text-primary"></i> Gerencie seus fornecedores PJ
</h2>

<a asp-action="Novo" class="btn btn-primary mb-4">
    <i class="bi bi-plus-circle me-1"></i> Nova Pessoa Jurídica
</a>

<div class="table-responsive">
    <table class="table table-striped align-middle table-hover">
        <thead class="table-light">
            <tr>
                <th>Razão Social</th>
                <th>Nome Fantasia</th>
                <th>CNPJ</th>
                <th>E-mail</th>
                <th>Telefone</th>
                <th>Situação</th>
                <th style="width:220px">End. Principal</th>
                <th style="width:300px">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Pessoa.RazaoSocial</td>
                    <td>@item.Pessoa.NomeFantasia</td>
                    <td>@item.Pessoa.NumeroInscricao</td>
                    <td>@item.Pessoa.Email</td>
                    <td>@item.Pessoa.Telefone</td>
                    <td>
                        <span class="badge bg-@(item.Pessoa.SituacaoAtiva ? "primary" : "secondary")">
                            @(item.Pessoa.SituacaoAtiva ? "Ativo" : "Inativo")
                        </span>
                    </td>

                    <!-- Coluna preenchida via AJAX -->
                    <td id="col-principal-@item.Pessoa.Id" data-pj="@item.Pessoa.Id">
                        <span class="text-muted small">Verificando...</span>
                    </td>

                    <td>
                        <div class="d-flex flex-wrap gap-2">
                            <!-- Gerenciar Endereços (lista completa, definir principal, etc.) -->
                            <a class="btn btn-sm btn-outline-secondary"
                               asp-controller="Enderecos"
                               asp-action="GerenciarPessoaJuridica"
                               asp-route-pessoaJuridicaId="@item.Pessoa.Id"
                               title="Ver todos os endereços da PJ">
                                <i class="bi bi-geo"></i> Endereços
                            </a>

                            <!-- Editar fornecedor -->
                            <a class="btn btn-sm btn-outline-primary"
                               asp-action="Editar"
                               asp-route-id="@item.Pessoa.Id">
                                <i class="bi bi-pencil-square me-1"></i> Editar
                            </a>

                            <!-- Endereço (fluxo rápido de cadastro/edição legado) -->
                            @if (item.PossuiEndereco)
                            {
                                <a class="btn btn-sm btn-outline-info"
                                   asp-controller="Enderecos"
                                   asp-action="Editar"
                                   asp-route-pessoaId="@item.Pessoa.Id">
                                    <i class="bi bi-geo-alt-fill me-1"></i> Editar Endereço
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-sm btn-outline-info"
                                   asp-controller="Enderecos"
                                   asp-action="Novo"
                                   asp-route-pessoaId="@item.Pessoa.Id">
                                    <i class="bi bi-geo-alt me-1"></i> Preencher Endereço
                                </a>
                            }

                            <!-- Conta Bancária -->
                            @if (item.PossuiConta)
                            {
                                <a class="btn btn-sm btn-outline-success"
                                   asp-controller="ContasBancarias"
                                   asp-action="Editar"
                                   asp-route-pessoaId="@item.Pessoa.Id">
                                    <i class="bi bi-bank me-1"></i> Editar Conta
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-sm btn-outline-success"
                                   asp-controller="ContasBancarias"
                                   asp-action="Novo"
                                   asp-route-pessoaId="@item.Pessoa.Id">
                                    <i class="bi bi-bank2 me-1"></i> Preencher Conta
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        (function () {
            // Template de URL para consultar o principal de cada PJ
            const urlTpl = '@Url.Action("PrincipalPorPessoaJuridica", "Enderecos", new { pessoaJuridicaId = "__ID__" })';

            function urlPrincipal(pjId) {
                return urlTpl.replace("__ID__", pjId);
            }

            // Para cada linha, busca o principal e preenche a coluna
            $("[id^='col-principal-']").each(function () {
                const $cell = $(this);
                const pjId = $cell.data("pj");

                $.get(urlPrincipal(pjId))
                    .done(function (resp) {
                        if (!resp?.sucesso) {
                            $cell.html('<span class="text-danger small">Falha ao carregar</span>');
                            return;
                        }

                        if (!resp.possuiPrincipal) {
                            $cell.html('<span class="badge bg-secondary"><i class="bi bi-dash-lg"></i> Sem principal</span>');
                            return;
                        }

                        const e = resp.endereco;
                        const resumo = `${e.Logradouro ?? ""}, ${e.Numero ?? ""} — ${e.Municipio ?? ""}/${e.Uf ?? ""}`;
                        $cell.html(
                            `<span class="badge bg-warning text-dark me-1">
                                <i class="bi bi-star-fill me-1"></i> Principal
                              </span>
                              <div class="small text-muted mt-1">${resumo}</div>`
                        );
                    })
                    .fail(function () {
                        $cell.html('<span class="text-danger small">Erro</span>');
                    });
            });
        })();
    </script>
}
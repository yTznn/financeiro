@model IEnumerable<Financeiro.Models.ViewModels.PessoaFisicaListaViewModel>

@{
    ViewBag.Title = "Pessoas Físicas";
    Layout = "_Layout";
}

<h2 class="mb-4">@ViewBag.Title</h2>

<a asp-action="Novo" class="btn btn-primary mb-3">
    + Nova Pessoa Física
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>CPF</th>
            <th>E-mail</th>
            <th>Telefone</th>
            <th>Situação</th>
            <th style="width:220px">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Pessoa.Nome</td>
                <td>@item.Pessoa.Sobrenome</td>
                <td>@item.Pessoa.Cpf</td>
                <td>@item.Pessoa.Email</td>
                <td>@item.Pessoa.Telefone</td>
                <td>@(item.Pessoa.SituacaoAtiva ? "Ativo" : "Inativo")</td>
                <td class="d-flex flex-wrap gap-1">

                    <!-- Editar Pessoa Física -->
                    <a class="btn btn-sm btn-outline-primary"
                       asp-action="Editar"
                       asp-route-id="@item.Pessoa.Id">
                        Editar
                    </a>
                    <!-- Conta Bancária -->
                    @if (item.PossuiConta)
                    {
                        <a class="btn btn-sm btn-outline-success"
                        asp-controller="ContasBancarias"
                        asp-action="Editar"
                        asp-route-pessoaId="@item.Pessoa.Id"
                        asp-route-pf="true">        <!-- aqui -->
                            Editar Conta
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-outline-success"
                        asp-controller="ContasBancarias"
                        asp-action="Novo"
                        asp-route-pessoaId="@item.Pessoa.Id"
                        asp-route-pf="true">        <!-- e aqui -->
                            Preencher Conta
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
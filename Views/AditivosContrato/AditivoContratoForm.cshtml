@model Financeiro.Models.ViewModels.AditivoContratoViewModel
@using Financeiro.Models
@using System.Globalization

@{
    ViewBag.Title = "Registrar Aditivo de Contrato";
    Layout = "_Layout";
    var versaoAtual = ViewBag.VersaoAtual as ContratoVersao;
    var br = new CultureInfo("pt-BR");
}

<div id="pageFlags"
     data-success="@(TempData["Sucesso"])"
     data-error="@(TempData["Erro"])"></div>

<div class="container-md mt-4" style="max-width: 980px;">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-file-earmark-plus"></i> @ViewBag.Title</h2>
    </div>

    @* --- RESUMO DA SITUAÇÃO ATUAL --- *@
    @if (versaoAtual != null)
    {
        <div class="card border-primary border-opacity-25 shadow-sm mb-4 bg-primary bg-opacity-10">
            <div class="card-body d-flex align-items-center">
                <div class="me-3 display-6 text-primary"><i class="bi bi-info-circle"></i></div>
                <div>
                    <h5 class="card-title fw-bold text-primary mb-1">Situação Atual (Versão @versaoAtual.Versao)</h5>
                    <p class="card-text mb-0 text-dark">
                        <span class="me-3"><i class="bi bi-calendar-event me-1"></i> Vigência: <strong>@versaoAtual.DataInicio.ToString("dd/MM/yyyy")</strong> a <strong>@versaoAtual.DataFim.ToString("dd/MM/yyyy")</strong></span>
                        <span><i class="bi bi-cash-stack me-1"></i> Valor Global: <strong>@versaoAtual.ValorContrato.ToString("C", br)</strong></span>
                    </p>
                </div>
            </div>
        </div>
    }

    <form asp-action="Salvar" method="post" id="formAditivo" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input asp-for="ContratoId" type="hidden" />

        @* --- BLOCO 1: CONFIGURAÇÕES DO ADITIVO --- *@
        <div class="card shadow-sm mb-4 border-0">
            <div class="card-header bg-light fw-bold text-uppercase small text-muted">
                <i class="bi bi-sliders me-1"></i> Configuração do Aditivo
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label asp-for="TipoAditivo" class="form-label fw-bold"></label>
                        <select asp-for="TipoAditivo" asp-items="Html.GetEnumSelectList<TipoAditivo>()" class="form-select" id="SelectTipoAditivo">
                            <option value="">-- Selecione --</option>
                        </select>
                        <span asp-validation-for="TipoAditivo" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-3">
                        <label asp-for="DataInicioAditivo" class="form-label fw-bold"></label>
                        <input asp-for="DataInicioAditivo" type="date" class="form-control" />
                        <span asp-validation-for="DataInicioAditivo" class="text-danger"></span>
                        <div class="form-text">Data de assinatura do termo.</div>
                    </div>

                    @* --- PAR DE VIGÊNCIA --- *@
                    <div class="col-md-3">
                        <label asp-for="NovaDataInicio" class="form-label fw-bold"></label>
                        <input asp-for="NovaDataInicio" type="date" class="form-control input-prazo" readonly />
                        <span asp-validation-for="NovaDataInicio" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="NovaDataFim" class="form-label fw-bold"></label>
                        <input asp-for="NovaDataFim" type="date" class="form-control input-prazo" readonly />
                        <span asp-validation-for="NovaDataFim" class="text-danger"></span>
                    </div>
                    
                    <div class="col-12">
                        <label asp-for="NovoObjeto" class="form-label fw-bold">Novo Objeto (Opcional)</label>
                        <textarea asp-for="NovoObjeto" class="form-control" rows="2" placeholder="Mantenha vazio para preservar o objeto atual..."></textarea>
                    </div>
                </div>
            </div>
        </div>

        @* --- BLOCO 2: DETALHAMENTO FINANCEIRO (GRID) --- *@
        <div class="card shadow-sm mb-4 border-0">
            <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                <div>
                    <span class="fw-bold text-uppercase small text-muted"><i class="bi bi-table me-1"></i> Detalhamento Financeiro</span>
                    <div class="small text-muted mt-1" id="msgGrid">Selecione um tipo de aditivo de valor para editar.</div>
                </div>
                <div class="bg-primary text-white px-3 py-2 rounded shadow-sm">
                    <div class="small text-uppercase opacity-75" style="font-size: 0.7rem;">Novo Total Estimado</div>
                    <div class="fw-bold fs-5" id="badgeTotal">R$ 0,00</div>
                </div>
            </div>
            
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="tabelaItens">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 60%;" class="ps-4">Item / Especialidade</th>
                            <th style="width: 40%;" class="text-end pe-4">Novo Valor Total (R$)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Itens != null && Model.Itens.Any())
                        {
                            for (int i = 0; i < Model.Itens.Count; i++)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <input type="hidden" name="Itens[@i].Id" value="@Model.Itens[i].Id" />
                                        <input type="hidden" name="Itens[@i].NomeItem" value="@Model.Itens[i].NomeItem" />
                                        
                                        <div class="fw-semibold text-dark">@Model.Itens[i].NomeItem</div>
                                        <div class="text-muted small">
                                            <i class="bi bi-clock-history"></i> Valor Atual: @Model.Itens[i].Valor.ToString("C", br)
                                        </div>
                                    </td>
                                    <td class="pe-4">
                                        @* INPUT INICIA COMO READONLY *@
                                        <div class="input-group">
                                            <span class="input-group-text bg-white border-end-0 text-muted">R$</span>
                                            <input type="text" 
                                                   name="Itens[@i].Valor" 
                                                   value="@Model.Itens[i].Valor.ToString("N2", br)" 
                                                   class="form-control money item-valor fw-bold text-end border-start-0 fs-5 bg-light" 
                                                   autocomplete="off" 
                                                   readonly />
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted p-5 bg-light">
                                    <i class="bi bi-exclamation-octagon fs-1 d-block mb-2"></i>
                                    Nenhum item financeiro encontrado.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @* --- BLOCO 3: JUSTIFICATIVA --- *@
        <div class="mb-4">
            <label asp-for="Justificativa" class="form-label fw-bold">Justificativa do Aditivo <span class="text-danger">*</span></label>
            <textarea asp-for="Justificativa" class="form-control" rows="3" placeholder="Descreva o motivo técnico/legal para esta alteração..."></textarea>
            <span asp-validation-for="Justificativa" class="text-danger"></span>
        </div>

        @* --- RODAPÉ COM AÇÕES --- *@
        <div class="d-flex justify-content-end gap-2 pb-5">
            <a asp-controller="Contratos" asp-action="Editar" asp-route-id="@Model.ContratoId" class="btn btn-light border btn-lg px-4">
                Cancelar
            </a>
            <button type="submit" class="btn btn-success btn-lg px-5 fw-bold shadow-sm" id="btnSalvar">
                <i class="bi bi-check2-circle me-2"></i> Confirmar Aditivo
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // 1. Alertas
            const successMsg = $('#pageFlags').data('success');
            const errorMsg = $('#pageFlags').data('error');
            if (successMsg) Swal.fire({ icon: 'success', title: 'Sucesso', text: successMsg });
            if (errorMsg) Swal.fire({ icon: 'error', title: 'Atenção', text: errorMsg });

            // 2. Máscaras
            $('.money').mask('#.##0,00', {reverse: true});

            // 3. Lógica de Bloqueio de Campos por Tipo (CORRIGIDA)
            function configurarCamposPorTipo() {
                // Pega o texto da opção selecionada
                let textoOriginal = $('#SelectTipoAditivo option:selected').text();
                
                // Normaliza: Remove acentos e joga pra minúsculo (Acréscimo -> acrescimo)
                let texto = textoOriginal.toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "");
                
                const valorSelecionado = $('#SelectTipoAditivo').val();

                if (!valorSelecionado) {
                    bloquearGrid(true);
                    bloquearPrazo(true);
                    return;
                }

                console.log("Texto Selecionado: ", texto); // Para debug

                // Regras:
                // PRAZO: Habilita se tiver "prazo"
                const temPrazo = texto.includes("prazo");
                
                // VALOR: Habilita se tiver "acrescimo" OU "supressao"
                const temValor = texto.includes("acrescimo") || texto.includes("supressao");

                // Aplica bloqueios (Lógica Inversa: Se TEM prazo, NÃO bloqueia prazo)
                bloquearPrazo(!temPrazo);
                bloquearGrid(!temValor);
            }

            function bloquearPrazo(bloquear) {
                const inputs = $('.input-prazo');
                inputs.prop('readonly', bloquear);
                
                if (bloquear) {
                    inputs.addClass('bg-light');
                } else {
                    inputs.removeClass('bg-light');
                }
            }

            function bloquearGrid(bloquear) {
                const inputs = $('.item-valor');
                inputs.prop('readonly', bloquear);
                
                if (bloquear) {
                    inputs.addClass('bg-light text-muted').removeClass('fw-bold border-primary');
                    $('#msgGrid').text('Grid bloqueada. Selecione um aditivo de VALOR (Acréscimo/Supressão) para editar.');
                } else {
                    inputs.removeClass('bg-light text-muted').addClass('fw-bold border-primary');
                    $('#msgGrid').text('Edite os valores abaixo para o novo total desejado.');
                }
            }

            // Ouve a mudança no dropdown
            $('#SelectTipoAditivo').change(configurarCamposPorTipo);

            // 4. Cálculo de Totais
            function atualizarTotal() {
                let total = 0;
                $('.item-valor').each(function() {
                    let valStr = $(this).val().replace(/\./g, '').replace(',', '.');
                    let val = parseFloat(valStr);
                    if (!isNaN(val)) total += val;
                });
                $('#badgeTotal').text('Novo Total: ' + total.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' }));
            }

            $(document).on('keyup change', '.item-valor', atualizarTotal);
            
            // Executa na carga inicial
            atualizarTotal();
            configurarCamposPorTipo(); // Garante o estado correto ao carregar

            // 5. Submit com Confirmação
            $('#formAditivo').on('submit', function(e) {
                if (!$(this).valid()) return;
                e.preventDefault();
                
                Swal.fire({
                    title: 'Confirmar Aditivo?',
                    text: "Essa ação criará uma nova versão do contrato.",
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#198754',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sim, salvar!',
                    cancelButtonText: 'Revisar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        this.submit();
                    }
                });
            });
        });
    </script>
}
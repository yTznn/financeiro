<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Financeiro</title>

    @* --- ÍCONE DA PÁGINA --- *@
    <link rel="icon" type="image/png" href="~/img/logo.png" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/financeiro.styles.css" asp-append-version="true" />

    <style>
        :root {
            --blue: #3c91e6;
            --white: #fff;
            --gray: #f5f6fa;
            --dark: #102444;
            --light-dark: #1a3a6a;
            --scrollbar: rgba(255,255,255,.4);
            --scrollbar-hover: rgba(255,255,255,.7);
        }
        body {
            margin: 0;
            background: var(--gray);
            font-family: 'Segoe UI', sans-serif;
        }
        .sidebar {
            position: fixed;
            width: 250px;
            height: 100%;
            background: var(--dark);
            transition: all 0.3s ease;
            overflow-y: auto;
            overflow-x: hidden;
            z-index: 100;
        }
        .sidebar.close { width: 78px; }
        
        /* --- LOGO --- */
        .sidebar .logo-details {
            height: 60px;
            display: flex;
            align-items: center;
            padding-left: 20px;
            /* Evita quebra de linha feia na animação */
            overflow: hidden; 
        }
        .sidebar .logo-details i { font-size: 30px; color: var(--white); min-width: 40px; }
        .sidebar .logo-details .logo_name { 
            color: var(--white); 
            font-size: 20px; 
            margin-left: 10px; 
            font-weight: bold; 
            white-space: nowrap;
            transition: opacity 0.3s ease;
        }
        .sidebar.close .logo_name { opacity: 0; pointer-events: none; }

        /* --- MENU --- */
        .sidebar ul { margin-top: 20px; padding: 0; }
        .sidebar ul li { position: relative; list-style: none; padding-left: 20px; }
        .sidebar ul li a {
            display: flex; align-items: center; height: 50px;
            text-decoration: none; color: var(--white); transition: all 0.2s ease;
        }
        .sidebar ul li a:hover { background: var(--light-dark); border-radius: 6px; }
        .sidebar ul li a.active { background: var(--blue); border-radius: 6px; }
        .sidebar ul li i { min-width: 40px; text-align: center; font-size: 20px; }
        
        .sidebar ul li .links_name {
            transition: opacity 0.3s ease;
            white-space: nowrap;
        }
        .sidebar.close ul li .links_name { opacity: 0; pointer-events: none; }

        /* --- SUBMENU --- */
        .sidebar ul li ul {
            background-color: var(--light-dark);
            border-radius: 6px; margin: 5px 0; padding-left: 10px;
        }
        .sidebar ul li ul li { padding-left: 10px; }
        .sidebar ul li ul li a { font-size: 14px; color: var(--white); }

        /* --- PERFIL --- */
        .sidebar .profile {
            position: fixed; bottom: 0; width: 250px; /* fixo no tamanho aberto */
            padding: 10px; text-align: center; background: var(--light-dark);
            transition: all 0.3s ease;
            overflow: hidden;
        }
        .sidebar.close .profile { width: 78px; }
        .sidebar .profile img {
            width: 40px; height: 40px; border-radius: 50%; object-fit: cover; margin-bottom: 5px;
        }
        .sidebar.close .profile .text-white { display: none; }

        /* --- CONTEÚDO PRINCIPAL --- */
        .home-section {
            position: relative; left: 250px; width: calc(100% - 250px);
            transition: all 0.3s ease; padding: 20px;
        }
        .sidebar.close ~ .home-section { left: 78px; width: calc(100% - 78px); }
        
        /* --- BOTÃO DE TOGGLE (FIXAR) --- */
        .toggle-btn { 
            position: absolute; left: 20px; top: 20px; 
            font-size: 24px; color: var(--blue); cursor: pointer; 
            transition: transform 0.3s ease;
        }
        /* Efeito visual quando travado */
        .toggle-btn.pinned { 
            color: var(--dark); 
            transform: rotate(45deg); /* Dá um charminho no alfinete */
        }

        .select2-container--open { z-index: 9999999 !important; }

        /* --- MENUS ROLÁVEIS --- */
        .menu-window {
            max-height: 225px; 
            overflow-y: auto; overflow-x: hidden; scroll-behavior: smooth;
            position: relative;
            mask-image: linear-gradient(to bottom, transparent 0, rgba(0,0,0,.9) 10px, rgba(0,0,0,1) calc(100% - 10px), transparent 100%);
            -webkit-mask-image: linear-gradient(to bottom, transparent 0, rgba(0,0,0,.9) 10px, rgba(0,0,0,1) calc(100% - 10px), transparent 100%);
        }
        #gerenciamento-list > li.menu-item > a { min-height: 45px; display: flex; align-items: center; }
        .menu-controls button[disabled] { opacity: 0.35; pointer-events: none; }

        /* Scrollbar */
        .menu-window { scrollbar-width: thin; scrollbar-color: var(--scrollbar) transparent; }
        .menu-window::-webkit-scrollbar { width: 6px; }
        .menu-window::-webkit-scrollbar-track { background: transparent; }
        .menu-window::-webkit-scrollbar-thumb { background-color: var(--scrollbar); border-radius: 6px; }
        .menu-window:hover::-webkit-scrollbar-thumb { background-color: var(--scrollbar-hover); }
    </style>
</head>

@using Financeiro.Extensions 

<body>
    @{
        string? currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        string? currentAction = ViewContext.RouteData.Values["action"]?.ToString();

        var gerenciamentoControllers = new[] { "Contratos", "Entidades", "Fornecedores", "Instrumentos", "LancamentosInstrumento", "Movimentacoes", "Niveis", "Orcamentos", "Perfis", "Usuarios", "RecebimentosInstrumento", "Logs" };
        var relatoriosControllers = new[] { "Relatorios" };

        bool isGerenciamentoActive = gerenciamentoControllers.Contains(currentController);
        bool isRelatoriosActive = relatoriosControllers.Contains(currentController);
    }
    
    <div class="sidebar close" id="sidebar">
        <div class="logo-details">
            <i class='bx bx-code-alt'></i>
            <span class="logo_name">Financeiro</span>
        </div>
        <ul class="nav-list" id="accordionSidebar">
            
            <li class="menu-item">
                <a asp-controller="Home" asp-action="Index" class="@(currentController == "Home" && currentAction == "Index" ? "active" : "")">
                    <i class='bx bx-grid-alt'></i><span class="links_name">Dashboard</span>
                </a>
            </li>

            <li>
                <a href="#" class="menu-toggle @(isGerenciamentoActive ? "active" : "")" data-target="#submenu-gerenciamento">
                    <i class='bx bx-data'></i><span class="links_name">Base de Gerenciamento</span>
                </a>

                <ul class="collapse list-unstyled @(isGerenciamentoActive ? "show" : "")" id="submenu-gerenciamento">
                    <li class="menu-window p-0" id="window-gerenciamento">
                        <ul id="gerenciamento-list" class="list-unstyled m-0">
                            @if (User.TemPermissao("CONTRATO_VIEW")) { <li class="menu-item"><a asp-controller="Contratos" asp-action="Index" class="@(currentController == "Contratos" ? "active" : "")"><i class='bx bxs-file-doc'></i><span class="links_name">Contratos</span></a></li> }
                            @if (User.TemPermissao("ENTIDADE_VIEW")) { <li class="menu-item"><a asp-controller="Entidades" asp-action="Index" class="@(currentController == "Entidades" ? "active" : "")"><i class='bx bx-building-house'></i><span class="links_name">Entidades</span></a></li> }
                            @if (User.TemPermissao("FORNECEDOR_VIEW")) { <li class="menu-item"><a asp-controller="Fornecedores" asp-action="Index" class="@(currentController == "Fornecedores" ? "active" : "")"><i class='bx bx-package'></i><span class="links_name">Fornecedores</span></a></li> }
                            @if (User.TemPermissao("INSTRUMENTO_VIEW")) { <li class="menu-item"><a asp-controller="Instrumentos" asp-action="Index" class="@(currentController == "Instrumentos" ? "active" : "")"><i class='bx bx-book-content'></i><span class="links_name">Instrumentos</span></a></li> }
                            @if (User.TemPermissao("MOVIMENTACAO_VIEW")) { <li class="menu-item"><a asp-controller="Movimentacoes" asp-action="Index" class="@(currentController == "Movimentacoes" ? "active" : "")"><i class='bx bx-money-withdraw'></i><span class="links_name">Lançamentos Financeiros</span></a></li> }
                            @if (User.TemPermissao("NIVEL_VIEW")) { <li class="menu-item"><a asp-controller="Niveis" asp-action="Index" class="@(currentController == "Niveis" ? "active" : "")"><i class='bx bx-sitemap'></i><span class="links_name">Níveis</span></a></li> }
                            @if (User.TemPermissao("ORCAMENTO_VIEW")) { <li class="menu-item"><a asp-controller="Orcamentos" asp-action="Index" class="@(currentController == "Orcamentos" ? "active" : "")"><i class='bx bx-bar-chart-square'></i><span class="links_name">Orçamentos</span></a></li> }
                            @if (User.TemPermissao("PERFIL_VIEW")) { <li class="menu-item"><a asp-controller="Perfis" asp-action="Index" class="@(currentController == "Perfis" ? "active" : "")"><i class='bx bx-id-card'></i><span class="links_name">Perfis de Acesso</span></a></li> }
                            @if (User.TemPermissao("RECEBIMENTO_VIEW")) { <li class="menu-item"><a asp-controller="RecebimentosInstrumento" asp-action="RelatorioGeral" class="@(currentController == "RecebimentosInstrumento" ? "active" : "")"><i class='bx bxs-dollar-circle'></i><span class="links_name">Recebimentos</span></a></li> }
                            @if (User.TemPermissao("USUARIO_VIEW")) { <li class="menu-item"><a asp-controller="Usuarios" asp-action="Index" class="@(currentController == "Usuarios" ? "active" : "")"><i class='bx bx-group'></i><span class="links_name">Usuários</span></a></li> }
                            @if (User.TemPermissao("LOG_VIEW")) { <li class="menu-item"><a asp-controller="Logs" asp-action="Index" class="@(currentController == "Logs" ? "active" : "")"><i class='bx bx-clipboard'></i><span class="links_name">Logs de Auditoria</span></a></li> }
                        </ul>
                    </li>

                    <li class="menu-controls d-flex align-items-center justify-content-between px-2 py-1">
                        <button type="button" class="btn btn-sm btn-link text-white p-0" id="btnPrev" title="Itens anteriores"><i class='bx bx-chevron-up' style="font-size:20px;"></i></button>
                        <span class="small text-white-50" id="pagerInfo"></span>
                        <button type="button" class="btn btn-sm btn-link text-white p-0" id="btnNext" title="Próximos itens"><i class='bx bx-chevron-down' style="font-size:20px;"></i></button>
                    </li>
                </ul>
            </li>
            
            @if (User.TemPermissao("RELATORIO_VIEW"))
            {
                <li>
                    <a href="#" class="menu-toggle @(isRelatoriosActive ? "active" : "")" data-target="#submenu-relatorios">
                        <i class='bx bx-file-find'></i><span class="links_name">Relatórios</span>
                    </a>
                    <ul class="collapse list-unstyled @(isRelatoriosActive ? "show" : "")" id="submenu-relatorios">
                        <li class="menu-window p-0" id="window-relatorios">
                            <ul id="relatorios-list" class="list-unstyled m-0">
                                <li class="menu-item">
                                    <a asp-controller="Relatorios" asp-action="Index" class="@(currentController == "Relatorios" && currentAction == "Index" ? "active" : "")">
                                        <i class='bx bx-table'></i><span class="links_name">Flow x Recebimento</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>
            }

            @if (User.Identity?.IsAuthenticated == true)
            {
                <li>
                    <a asp-controller="Usuarios" asp-action="MeusDados" class="@(currentController == "Usuarios" && currentAction == "MeusDados" ? "active" : "")">
                        <i class='bx bxs-user-detail'></i><span class="links_name">Meus Dados</span>
                    </a>
                </li>
                <li>
                    <form asp-controller="Conta" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link text-white text-start ps-4" style="text-decoration: none;">
                            <i class='bx bx-log-out'></i><span class="links_name">Sair</span>
                        </button>
                    </form>
                </li>
            }
        </ul>

        <div class="profile">
            @if (User.Identity?.IsAuthenticated == true)
            {
                var hash = User.FindFirst("HashImagem")?.Value;
                if (!string.IsNullOrEmpty(hash))
                {
                    <img src="/Usuarios/ImagemPerfil?hash=@hash" alt="Avatar" />
                }
                <div class="text-white small">
                    @User.Identity?.Name
                    <div class="fw-bold text-white">@User.FindFirst("SiglaEntidade")?.Value</div>
                </div>
            }
        </div>
    </div>

    <section class="home-section">
        @* --- AQUI ESTÁ O BOTÃO MÁGICO: Agora é um PIN/MENU --- *@
        <i class='bx bx-menu toggle-btn' id="btn-toggle" title="Travar/Destravar Menu"></i>
        
        <div class="container-fluid mt-4">
            @RenderBody()
        </div>
        <footer class="mt-5 text-center text-muted">&copy; 2025 - Sistema Financeiro</footer>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/alertas.js"></script>

    <script>
        // --- LÓGICA DE BARRA LATERAL COM TRAVA (PIN) ---
        const sidebar = document.getElementById("sidebar");
        const toggleBtn = document.getElementById("btn-toggle");
        
        // Recupera o estado salvo no navegador (Memória)
        let isLocked = localStorage.getItem("sidebarLocked") === "true";

        // Função para aplicar o visual correto (Aberto ou Fechado)
        function aplicarEstadoVisual() {
            if (isLocked) {
                sidebar.classList.remove("close"); // Força aberto
                toggleBtn.classList.remove("bx-menu");
                toggleBtn.classList.add("bx-pin", "pinned"); // Ícone de Alfinete
            } else {
                sidebar.classList.add("close"); // Força fechado (padrão)
                toggleBtn.classList.remove("bx-pin", "pinned");
                toggleBtn.classList.add("bx-menu"); // Ícone de Menu
            }
        }

        // 1. Inicializa ao carregar a página
        aplicarEstadoVisual();

        // 2. Clique no Botão (Alterna entre Travado e Destravado)
        toggleBtn.addEventListener("click", () => {
            isLocked = !isLocked; // Inverte o estado
            localStorage.setItem("sidebarLocked", isLocked); // Salva na memória
            aplicarEstadoVisual();
        });

        // 3. Mouse Entra (Hover) - Só funciona se NÃO estiver travado
        sidebar.addEventListener("mouseenter", () => {
            if (!isLocked) {
                sidebar.classList.remove("close");
            }
        });

        // 4. Mouse Sai (Leave) - Só funciona se NÃO estiver travado
        sidebar.addEventListener("mouseleave", () => {
            if (!isLocked) {
                sidebar.classList.add("close");
                
                // Fecha submenus abertos automaticamente ao tirar o mouse (opcional, para limpar visual)
                document.querySelectorAll(".nav-list .collapse.show").forEach(open => {
                    // new bootstrap.Collapse(open).hide(); // Descomente se quiser fechar submenus ao sair
                });
            }
        });

        // --- LÓGICA DOS SUBMENUS (ACORDEÃO) ---
        const menuToggles = document.querySelectorAll(".menu-toggle");
        menuToggles.forEach(toggle => {
            toggle.addEventListener("click", function (e) {
                e.preventDefault();
                // Se a sidebar estiver fechada e clicar no ícone, força abrir (mas não trava)
                if (sidebar.classList.contains("close")) {
                    sidebar.classList.remove("close");
                }

                const targetSelector = this.getAttribute("data-target");
                const target = document.querySelector(targetSelector);

                // Fecha outros abertos (comportamento de acordeão)
                document.querySelectorAll(".nav-list .collapse.show").forEach(open => {
                    if (open !== target) {
                        new bootstrap.Collapse(open).hide();
                        // Remove classe active do link pai
                        const parentLink = document.querySelector(`a[data-target="#${open.id}"]`);
                        if(parentLink) parentLink.classList.remove("active");
                    }
                });

                if (target.classList.contains("show")) {
                    new bootstrap.Collapse(target).hide();
                    this.classList.remove("active");
                } else {
                    new bootstrap.Collapse(target).show();
                    this.classList.add("active");
                }
            });
        });

        // --- LÓGICA DE ROLAGEM DOS ITENS DO MENU ---
        (function () {
            const WINDOW = 5; 
            
            function initializeScroll(listId, windowId, prevId, nextId, infoId) {
                const list = document.getElementById(listId);
                const win = document.getElementById(windowId);
                const prev = document.getElementById(prevId);
                const next = document.getElementById(nextId);
                const info = document.getElementById(infoId);
                const submenu = win ? win.closest('.collapse') : null;
                const items = list ? Array.from(list.querySelectorAll('li.menu-item')) : [];
                
                if (!win || !items.length) {
                    const controls = prev ? prev.closest('.menu-controls') : null;
                    if (controls) controls.style.display = 'none';
                    return;
                }

                function itemHeight() {
                    const first = items[0]?.querySelector('a');
                    return Math.max(45, first ? first.getBoundingClientRect().height : 45);
                }

                function clampScroll() {
                    const max = win.scrollHeight - win.clientHeight;
                    if (win.scrollTop > max) win.scrollTop = max;
                    if (win.scrollTop < 0) win.scrollTop = 0;
                }

                function updateUI() {
                    const h = itemHeight();
                    const total = items.length;
                    const start = Math.round(win.scrollTop / h);
                    const end = Math.min(start + WINDOW, total);
                    if (info) info.textContent = `${start + 1}–${end}/${total}`;
                    prev.disabled = (start <= 0);
                    next.disabled = (end >= total);
                }

                function scrollByItems(delta) {
                    const h = itemHeight();
                    win.scrollTo({ top: win.scrollTop + (delta * h), behavior: 'smooth' });
                }

                prev.addEventListener('click', () => scrollByItems(-1));
                next.addEventListener('click', () => scrollByItems(1));

                let ticking = false;
                win.addEventListener('scroll', () => {
                    if (!ticking) {
                        window.requestAnimationFrame(() => {
                            clampScroll();
                            updateUI();
                            ticking = false;
                        });
                        ticking = true;
                    }
                });

                submenu?.addEventListener('show.bs.collapse', () => {
                    win.scrollTop = 0;
                    updateUI();
                });

                win.scrollTop = 0;
                updateUI();
                window.addEventListener('resize', () => updateUI());
            }

            // Inicializa Gerenciamento
            initializeScroll('gerenciamento-list', 'window-gerenciamento', 'btnPrev', 'btnNext', 'pagerInfo');
        })();

        // Rola para o item ativo ao carregar
        document.addEventListener("DOMContentLoaded", function() {
            const submenuGerenciamento = document.getElementById('submenu-gerenciamento');
            if (submenuGerenciamento && submenuGerenciamento.classList.contains('show')) {
                const activeSubMenuItem = submenuGerenciamento.querySelector('.menu-item a.active');
                if (activeSubMenuItem) {
                    activeSubMenuItem.scrollIntoView({ behavior: 'auto', block: 'nearest' });
                }
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
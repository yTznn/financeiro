@{
    ViewBag.Title = "Novo Cadastro de Fornecedor";
    Layout = "_Layout";
}

<style>
    body {
        background-color: #f8f9fa; /* Um cinza bem claro para o fundo */
    }

    .choice-card {
        text-decoration: none;
        color: inherit;
        border: 1px solid #e9ecef;
        border-radius: 0.75rem; /* Bordas mais arredondadas */
        transition: all 0.2s ease-in-out;
        background-color: #fff;
    }

    .choice-card:hover {
        transform: translateY(-5px) scale(1.02); /* Efeito de levantar e crescer */
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1);
        border-color: var(--bs-primary);
    }

    .card-icon {
        font-size: 4rem; /* Ícone bem grande e destacado */
        margin-bottom: 1rem;
        transition: color 0.2s ease-in-out;
    }
    
    .choice-card:hover .card-icon {
        color: var(--bs-primary) !important;
    }

    .select-link {
        display: inline-block;
        font-weight: 600;
        color: #6c757d; /* Cor sutil para o link */
        transition: all 0.2s ease-in-out;
    }
    
    .choice-card:hover .select-link {
        color: var(--bs-primary);
        letter-spacing: .5px; /* Efeito sutil no texto */
    }

</style>

<div class="container py-5">
    <div class="text-center mb-5">
        <i class="bx bx-user-plus" style="font-size: 3rem; color: var(--bs-primary);"></i>
        <h1 class="display-5 fw-bold mt-2">Novo Fornecedor</h1>
        <p class="lead text-muted">Para começar, escolha o tipo de cadastro que deseja realizar.</p>
    </div>

    <div class="row justify-content-center g-4">
        <div class="col-lg-4 col-md-5">
            <a asp-controller="PessoasJuridicas" asp-action="Novo" class="choice-card d-block">
                <div class="card-body p-4 p-lg-5 text-center">
                    <i class='bx bxs-business card-icon text-primary'></i>
                    <h4 class="card-title mb-2 fw-bold">Pessoa Jurídica</h4>
                    <p class="card-text text-muted mb-4">Para empresas, instituições e organizações com CNPJ.</p>
                    <span class="select-link">
                        Selecionar <i class='bx bx-right-arrow-alt align-middle'></i>
                    </span>
                </div>
            </a>
        </div>

        <div class="col-lg-4 col-md-5">
            <a asp-controller="PessoasFisicas" asp-action="Novo" class="choice-card d-block">
                <div class="card-body p-4 p-lg-5 text-center">
                    <i class='bx bxs-user-badge card-icon text-success'></i>
                    <h4 class="card-title mb-2 fw-bold">Pessoa Física</h4>
                    <p class="card-text text-muted mb-4">Para indivíduos, profissionais autônomos e fornecedores com CPF.</p>
                    <span class="select-link" style="--bs-primary: var(--bs-success);">
                        Selecionar <i class='bx bx-right-arrow-alt align-middle'></i>
                    </span>
                </div>
            </a>
        </div>
    </div>

    <div class="text-center mt-5">
        <a asp-controller="Fornecedores" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bx bx-arrow-back me-1"></i>
            Voltar para a Lista
        </a>
    </div>
</div>
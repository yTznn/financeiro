@model Financeiro.Models.Dto.NivelDto

@{
    // Gera um ID único para o formulário para evitar conflitos
    var formId = $"nivel-form-{Guid.NewGuid()}";
}

<div class="modal fade" id="modal-nivel-cadastro" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cadastrar Novo Nível</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                
                <form id="@formId" asp-controller="Niveis" asp-action="SalvarNivelAjax" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label d-block">Aplicável aos seguintes níveis:</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" asp-for="IsNivel1" />
                            <label class="form-check-label" asp-for="IsNivel1">Nível 1</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" asp-for="IsNivel2" />
                            <label class="form-check-label" asp-for="IsNivel2">Nível 2</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" asp-for="IsNivel3" />
                            <label class="form-check-label" asp-for="IsNivel3">Nível 3</label>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Ativo" />
                        <label class="form-check-label" asp-for="Ativo">Ativo</label>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary" form="@formId">Salvar</button>
            </div>
        </div>
    </div>
</div>
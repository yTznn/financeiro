@model IEnumerable<Financeiro.Models.Dto.NivelDto>
@{
    ViewData["Title"] = "Níveis";
}

<h3>Níveis cadastrados</h3>
<a asp-action="Novo" class="btn btn-primary mb-3">+ Novo Nível</a>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Nível 1</th>
            <th>Nível 2</th>
            <th>Nível 3</th>
            <th>Ativo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var n in Model)
    {
        <tr>
            <td>@n.Nome</td>
            <td>@(n.IsNivel1 ? "✔" : "")</td>
            <td>@(n.IsNivel2 ? "✔" : "")</td>
            <td>@(n.IsNivel3 ? "✔" : "")</td>
            <td>@(n.Ativo   ? "✔" : "✖")</td>
            <td>
                <a asp-action="Editar" asp-route-id="@n.Id" class="btn btn-sm btn-secondary">Editar</a>
                <form asp-action="Excluir" asp-route-id="@n.Id" method="post"
                      class="d-inline" onsubmit="return confirm('Inativar este nível?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-danger">Exclusão</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
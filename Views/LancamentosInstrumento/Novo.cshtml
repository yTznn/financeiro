@model Financeiro.Models.LancamentoInstrumento
@{
    ViewBag.Title = "Novo Lançamento";
    Layout = "_Layout";
}
<h2>Novo Lançamento</h2>
<form asp-action="Salvar" method="post" class="row g-3">
  @Html.AntiForgeryToken()
  <input type="hidden" asp-for="InstrumentoId" />
  <div class="col-md-3">
    <label class="form-label">Competência (mês/ano)</label>
    <input asp-for="Competencia" type="month" class="form-control" />
  </div>
  <div class="col-md-3">
    <label asp-for="Valor" class="form-label"></label>
    <input asp-for="Valor" class="form-control" inputmode="decimal" />
    <span asp-validation-for="Valor" class="text-danger"></span>
  </div>
  <div class="col-md-6">
    <label asp-for="Observacao" class="form-label"></label>
    <input asp-for="Observacao" class="form-control" />
  </div>
  <div class="col-12">
    <button class="btn btn-success" type="submit">Salvar</button>
    <a class="btn btn-secondary" asp-action="Index" asp-route-instrumentoId="@Model.InstrumentoId">Cancelar</a>
  </div>
</form>
@model Financeiro.Models.LancamentoInstrumento
@{
    ViewBag.Title = "Editar Lançamento";
    Layout = "_Layout";
}
<h2>Editar Lançamento</h2>
<form asp-action="Atualizar" method="post" class="row g-3">
  @Html.AntiForgeryToken()
  <input type="hidden" asp-for="Id" />
  <div class="col-md-3">
    <label class="form-label">Competência</label>
    <input class="form-control" value="@Model.Competencia.ToString("MM/yyyy")" readonly />
  </div>
  <div class="col-md-3">
    <label class="form-label">Valor</label>
    <input name="valor" class="form-control" value="@Model.Valor" inputmode="decimal" />
  </div>
  <div class="col-md-6">
    <label class="form-label">Observação</label>
    <input name="observacao" class="form-control" value="@Model.Observacao" />
  </div>
  <div class="col-12">
    <button class="btn btn-success" type="submit">Salvar</button>
    <a class="btn btn-secondary" asp-action="Index" asp-route-instrumentoId="@Model.InstrumentoId" asp-route-ano="@Model.Competencia.Year" asp-route-mes="@Model.Competencia.Month">Cancelar</a>
  </div>
</form>
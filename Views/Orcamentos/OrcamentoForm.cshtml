                                        // ... lógica simples de mostrar erro ...
                                        Swal.fire({ icon: 'error', title: 'Erro de Validação', text: 'Verifique os campos.' });
                                    } else {
                                        Swal.fire({ icon: 'error', title: 'Erro', text: mensagemErro });
                                    }
                                }
                            });
                        });

                        $modal.on('hidden.bs.modal', function () {

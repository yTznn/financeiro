@model Financeiro.Models.ViewModels.OrcamentoViewModel
@using Financeiro.Extensions

@{
    ViewData["Title"] = Model.Id == 0 ? "Novo Orçamento" : "Editar Orçamento";
}

<h3>@ViewData["Title"]</h3>
<hr />

<form id="orcamento-form"
      asp-action="@(Model.Id == 0 ? "Salvar" : "Atualizar")"
      method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" id="detalhamentoJsonInput" name="detalhamentoJson" />
    <input type="hidden" id="justificativa" name="justificativa" />

    <div class="row">
        <div class="col-12 mb-3">
            <label asp-for="InstrumentoId" class="form-label fw-bold">Instrumento (Fonte de Recurso)</label>
            <select asp-for="InstrumentoId"
                    asp-items="ViewBag.Instrumentos"
                    class="form-select"
                    id="InstrumentoId">
                <option value="">-- Selecione o Instrumento --</option>
            </select>
            <span asp-validation-for="InstrumentoId" class="text-danger"></span>
            <div class="form-text text-muted">O orçamento abaterá do saldo deste instrumento.</div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="VigenciaInicio" class="form-label"></label>
            <input asp-for="VigenciaInicio" id="VigenciaInicio" class="form-control" type="date" />
            <span asp-validation-for="VigenciaInicio" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="VigenciaFim" class="form-label"></label>
            <input asp-for="VigenciaFim" id="VigenciaFim" class="form-control" type="date" />
            <span asp-validation-for="VigenciaFim" class="text-danger"></span>
        </div>
        
        <div class="col-md-4 mb-3">
            <label asp-for="ValorPrevistoTotal" class="form-label">Valor Total do Orçamento</label>
            <div class="input-group">
                <span class="input-group-text fw-bold">R$</span>
                <input asp-for="ValorPrevistoTotal" 
                       id="ValorPrevistoTotal" 
                       type="text"
                       class="form-control fw-bold fs-5 text-end money" 
                       readonly />
            </div>
            <div class="mt-2 d-flex align-items-center bg-info bg-opacity-10 border border-info rounded p-2">
                <i class="bi bi-calendar-check text-info fs-4 me-2"></i>
                <div>
                    <div class="fw-bold text-dark" id="badge-total-mensal">Mensal Aprox: R$ 0,00</div>
                    <small class="text-muted" id="label-qtd-meses" style="font-size: 0.75rem;">(Calculado sobre 1 mês)</small>
                </div>
            </div>
            <span asp-validation-for="ValorPrevistoTotal" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-12 mb-3">
            <label asp-for="Observacao" class="form-label"></label>
            <textarea asp-for="Observacao" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Observacao" class="text-danger"></span>
        </div>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="Ativo" />
        <label class="form-check-label" asp-for="Ativo"></label>
    </div>

    <hr />

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Detalhamento do Orçamento</h4>
        <button type="button"
                class="btn btn-info"
                data-bs-toggle="modal"
                data-bs-target="#modalDetalhamento">
            Gerenciar Detalhamento
        </button>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

<div class="modal fade" id="modalDetalhamento" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Detalhamento do Orçamento</h5>
                <button type="button" class="btn btn-primary ms-auto" id="btn-adicionar-nivel">
                    <i class="bi bi-plus-circle"></i> Adicionar Nível Raiz
                </button>
            </div>
            <div class="modal-body bg-light">
                <div id="arvore-container"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                
                @if (User.TemPermissao("NIVEL_ADD"))
                {
                    <div class="vr mx-2"></div>
                    <button type="button" class="btn btn-warning" id="btn-abrir-modal-nivel">
                        <i class="bi bi-asterisk"></i> Cadastrar Novo Nível (BD)
                    </button>
                }

                <div id="modal-nivel-placeholder"></div>
                <button type="button" class="btn btn-success fw-bold" id="salvar-detalhamento">
                    <i class="bi bi-check-lg"></i> Confirmar Detalhes
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const hasSwal = typeof window.Swal !== 'undefined';

        if (window.jQuery && $('#InstrumentoId').length) {
            $('#InstrumentoId').select2({
                theme: 'bootstrap-5',
                placeholder: 'Selecione ou digite para buscar...',
                allowClear: true
            });
        }

        // ---------- VARIÁVEIS ----------
        let detalhamento = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Detalhamento ?? new List<Financeiro.Models.ViewModels.OrcamentoDetalheViewModel>()));
        const arvoreContainer = document.getElementById('arvore-container');
        const btnAdicionarNivel = document.getElementById('btn-adicionar-nivel');
        const btnSalvarDetalhamento = document.getElementById('salvar-detalhamento');
        const btnAbrirNovoNivel = document.getElementById('btn-abrir-modal-nivel');
        
        const valorTotalInput = document.getElementById('ValorPrevistoTotal');
        const detalhamentoJsonInput = document.getElementById('detalhamentoJsonInput');
        
        const vigenciaInicioInput = document.getElementById('VigenciaInicio');
        const vigenciaFimInput = document.getElementById('VigenciaFim');
        const badgeTotalMensal = document.getElementById('badge-total-mensal');
        const labelQtdMeses = document.getElementById('label-qtd-meses');

        // ---------- FORMATAÇÃO -----------
        function toBR(n) {
            if (n === null || n === undefined) return '0,00';
            return n.toLocaleString('pt-BR', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
        }

        function parseBR(s) {
            if (!s) return 0;
            if (typeof s === 'number') return s;
            let clean = s.toString().replace(/\./g, '').replace(',', '.');
            return parseFloat(clean) || 0;
        }

        function aplicarMascaras() {
            if (window.jQuery && $.fn.mask) {
                $('.money').mask('#.##0,00', { reverse: true });
            }
        }

        // ---------- LÓGICA DE DATAS -----------
        function calcularMesesDeVigencia() {
            const sInicio = vigenciaInicioInput.value; 
            const sFim = vigenciaFimInput.value;       
            if (!sInicio || !sFim) return 1;
            const pInicio = sInicio.split('-').map(Number); 
            const pFim = sFim.split('-').map(Number);       
            const d1 = new Date(pInicio[0], pInicio[1] - 1, pInicio[2]);
            const d2 = new Date(pFim[0], pFim[1] - 1, pFim[2]);
            if (d2 < d1) return 1;
            let meses = (d2.getFullYear() - d1.getFullYear()) * 12;
            meses -= d1.getMonth();
            meses += d2.getMonth();
            const total = meses + 1;
            return total > 0 ? total : 1;
        }

        function atualizarVisuaisMensais() {
            const meses = calcularMesesDeVigencia();
            const valorTotal = parseBR(valorTotalInput.value);
            const mensalTotal = valorTotal / meses;

            if(badgeTotalMensal) {
                badgeTotalMensal.innerText = `Mensal Aprox: R$ ${toBR(mensalTotal)}`;
                labelQtdMeses.innerText = `(Vigência: ${meses} ${meses === 1 ? 'mês' : 'meses'})`;
            }

            document.querySelectorAll('.orcamento-node').forEach(node => {
                const inputVal = node.querySelector('input[data-prop="ValorPrevisto"]');
                const badge = node.querySelector('.badge-mensal-valor');
                if (inputVal && badge) {
                    const val = parseBR(inputVal.value);
                    const mensalNode = val / meses;
                    badge.innerText = `Mensal: R$ ${toBR(mensalNode)}`;
                }
            });
        }

        // ---------- CÁLCULOS E ÁRVORE -----------
        function calcularTotaisNosDados() {
            function subtotal(node) {
                if (!node.Filhos || node.Filhos.length === 0)
                    return parseFloat(node.ValorPrevisto) || 0;
                let soma = 0;
                node.Filhos.forEach(c => soma += subtotal(c));
                node.ValorPrevisto = soma;
                return soma;
            }
            const total = detalhamento.reduce((a, n) => a + subtotal(n), 0);
            valorTotalInput.value = toBR(total);
            $(valorTotalInput).trigger('input'); 
            atualizarVisuaisMensais();
            return total;
        }

        function criarNodeElemento(node, path) {
            const indent = (path.length - 1) * 25;
            const div = document.createElement('div');
            div.className = 'orcamento-node mb-2';
            div.style.marginLeft = `${indent}px`;
            div.dataset.path = path.join('-');
            
            const isParent = node.Filhos && node.Filhos.length > 0;
            const isL3 = path.length >= 3;
            const nivelHierarquico = path.length;

            let initialOption = '';
            const optVal = (node.NivelId ?? '').toString().trim();
            if (optVal) {
                initialOption = `<option value="${escapeHtml(optVal)}" selected>${escapeHtml(node.Nome || '')}</option>`;
            } else if (node.Nome) {
                initialOption = `<option value="${escapeHtml(node.Nome)}" selected>${escapeHtml(node.Nome)}</option>`;
            }

            div.innerHTML = `
                <div class="card shadow-sm border-0">
                    <div class="card-body p-2 d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="mb-2">
                                <select class="form-control form-control-sm select2-niveis"
                                    style="width: 100%;"
                                    data-prop="Nome"
                                    data-nivel="${nivelHierarquico}">
                                    ${initialOption}
                                </select>
                            </div>
                            <div class="d-flex gap-2">
                                <div class="input-group input-group-sm" style="flex: 1;">
                                    <span class="input-group-text fw-bold">Total</span>
                                    <input type="text" 
                                           class="form-control fw-bold money"
                                           data-prop="ValorPrevisto"
                                           value="${toBR(node.ValorPrevisto)}" 
                                           placeholder="0,00"
                                           ${isParent ? 'readonly style="background-color:#e9ecef;"' : ''}>
                                </div>
                                <div class="input-group input-group-sm" style="flex: 1;">
                                    <span class="input-group-text bg-warning bg-opacity-10 text-dark fw-bold" title="Previsão de gasto mensal">
                                        <i class="bi bi-calendar3 me-1"></i>
                                    </span>
                                    <span class="form-control bg-warning bg-opacity-10 text-dark badge-mensal-valor d-flex align-items-center justify-content-end fw-bold">
                                        Mensal: R$ 0,00
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="ms-3 d-flex flex-column gap-2">
                            ${!isL3 ? `<button type="button" class="btn btn-sm btn-outline-success" data-action="add-child" title="Adicionar Subnível"><i class="bi bi-plus-lg"></i></button>` : ''}
                            <button type="button" class="btn btn-sm btn-outline-danger" data-action="remove" title="Remover"><i class="bi bi-trash"></i></button>
                        </div>
                    </div>
                </div>`;
            
            if (isParent) {
                const filhosDiv = document.createElement('div');
                filhosDiv.className = 'orcamento-node-children border-start border-3 border-secondary ps-3 ms-4 mt-2';
                node.Filhos.forEach((c, i) =>
                    filhosDiv.appendChild(criarNodeElemento(c, [...path, i])));
                div.appendChild(filhosDiv);
            }
            return div;
        }

        // ---------- FUNÇÕES DA ÁRVORE (Inicialização e Sincronia) -----------
        function inicializarSelect2ParaElemento($select) {
            const nivel = $select.data('nivel');
            $select.select2({
                theme: 'bootstrap-5',
                dropdownParent: $('#modalDetalhamento'),
                placeholder: 'Digite para buscar...',
                minimumInputLength: 1,
                allowClear: true,
                ajax: {
                    url: '/Niveis/Search',
                    dataType: 'json',
                    delay: 250,
                    data: params => ({ term: params.term, nivel }),
                    processResults: data => ({ results: data.results })
                }
            });
        }

        function renderizarArvore() {
            arvoreContainer.innerHTML = '';
            detalhamento.forEach((n, i) =>
                arvoreContainer.appendChild(criarNodeElemento(n, [i])));
            $('.select2-niveis').each(function () { inicializarSelect2ParaElemento($(this)); });
            aplicarMascaras();
            atualizarVisuaisMensais(); 
        }

        function getNode(pathArr) {
            let n = { Filhos: detalhamento };
            for (const i of pathArr) {
                if (!n.Filhos || !n.Filhos[i]) return null;
                n = n.Filhos[i];
            }
            return n;
        }

        function atualizarReadonlyValores() {
            document.querySelectorAll('.orcamento-node input[data-prop="ValorPrevisto"][readonly]')
            .forEach(inp => {
                const path = inp.closest('.orcamento-node').dataset.path.split('-').map(Number);
                const n = getNode(path);
                if (n) {
                    inp.value = toBR(n.ValorPrevisto);
                    $(inp).trigger('input');
                }
            });
            atualizarVisuaisMensais();
        }

        // --- CORREÇÃO IMPORTANTE: Função para salvar o estado visual no array ---
        function syncSelectionsIntoData() {
            document.querySelectorAll('.orcamento-node select[data-prop="Nome"]').forEach(sel => {
                const path = sel.closest('.orcamento-node').dataset.path.split('-').map(Number);
                const node = getNode(path);
                if (!node) return;
                const data = $(sel).select2('data') || [];
                if (data.length) {
                    node.NivelId = (data[0].id ?? '').toString().trim();
                    node.Nome = (data[0].text ?? '').toString().trim();
                }
            });
        }

        // ---------- EVENTOS E VALIDAÇÃO -----------
        function escapeHtml(s) {
            return (s ?? '').replace(/[&<>"']/g, m => ({ '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#39;' }[m]));
        }
        const norm = s => (s ?? '').toString().trim().toLowerCase();
        function sameLevelKey(n) {
            const idStr = (n?.NivelId ?? '').toString().trim();
            if (idStr) return `id:${idStr.toLowerCase()}`;
            const nm = norm(n?.Nome);
            return nm ? `nm:${nm}` : '';
        }

        function validateAllSelected() {
            const faltantes = [];
            function walk(arr, prefix) {
                arr.forEach((n, i) => {
                    const path = (prefix ? prefix + '-' : '') + i;
                    const hasId = n && n.NivelId;
                    const hasName = n && n.Nome;
                    if (!hasId && !hasName) faltantes.push(path);
                    if (n?.Filhos?.length) walk(n.Filhos, path);
                });
            }
            walk(detalhamento, '');
            if (faltantes.length) {
                const msg = 'Preencha todos os níveis antes de salvar.';
                if(hasSwal) Swal.fire({ icon: 'warning', title: 'Atenção', text: msg }); else alert(msg);
                return false;
            }
            return true;
        }
        
        function validateGlobalDuplicates() {
            const mapDepth = new Map();
            const dups = [];
            function walk(arr, depth, prefix) {
                arr.forEach((n, i) => {
                    const key = sameLevelKey(n);
                    if (key) {
                        if (!mapDepth.has(depth)) mapDepth.set(depth, new Set());
                        const set = mapDepth.get(depth);
                        const path = (prefix ? prefix + '-' : '') + i;
                        if (set.has(key)) dups.push({ depth, name: n.Nome, path });
                        else set.add(key);
                    }
                    if (n?.Filhos?.length) walk(n.Filhos, depth + 1, (prefix ? prefix + '-' : '') + i);
                });
            }
            walk(detalhamento, 1, '');
            if (dups.length) {
                const msg = `Nível duplicado: ${dups[0].name}`;
                if(hasSwal) Swal.fire({ icon: 'error', title: 'Duplicidade', text: msg }); else alert(msg);
                return false;
            }
            return true;
        }

        vigenciaInicioInput.addEventListener('change', atualizarVisuaisMensais);
        vigenciaFimInput.addEventListener('change', atualizarVisuaisMensais);

        btnAdicionarNivel.addEventListener('click', () => {
            syncSelectionsIntoData(); // <<< SALVA O ESTADO ATUAL ANTES DE ADICIONAR
            const novoNodeData = { NivelId: '', Nome: '', ValorPrevisto: 0, Filhos: [] };
            detalhamento.push(novoNodeData);
            renderizarArvore();
        });

        arvoreContainer.addEventListener('click', e => {
            const btn = e.target.closest('button[data-action]');
            if (!btn) return;
            const elem = btn.closest('.orcamento-node');
            const path = elem.dataset.path.split('-').map(Number);
            const act = btn.dataset.action;

            syncSelectionsIntoData(); // <<< SALVA O ESTADO ATUAL ANTES DE MEXER

            if (act === 'add-child') {
                const pNode = getNode(path);
                if (!pNode) return;
                pNode.Filhos = pNode.Filhos || [];
                pNode.Filhos.push({ NivelId: '', Nome: '', ValorPrevisto: 0, Filhos: [] });
                pNode.ValorPrevisto = 0; 
                renderizarArvore();
                
            } else if (act === 'remove') {
                const parentPath = path.slice(0, -1);
                const idx = path[path.length - 1];
                if (parentPath.length === 0) {
                    detalhamento.splice(idx, 1);
                } else {
                    const p = getNode(parentPath);
                    if (p) p.Filhos.splice(idx, 1);
                }
                renderizarArvore();
            }
            calcularTotaisNosDados();
        });

        arvoreContainer.addEventListener('change', e => {
            const select = e.target.closest('select[data-prop="Nome"]');
            if (!select) return;
            syncSelectionsIntoData();
        });

        arvoreContainer.addEventListener('input', e => {
            const inputValor = e.target.closest('input[data-prop="ValorPrevisto"]');
            if (!inputValor) return;
            const path = inputValor.closest('.orcamento-node').dataset.path.split('-').map(Number);
            const node = getNode(path);
            
            if (node) node.ValorPrevisto = parseBR(inputValor.value);
            
            calcularTotaisNosDados();
            atualizarReadonlyValores();
        });

        let ultimoNivelFocado = 1;
        arvoreContainer.addEventListener('focusin', e => {
            const select = e.target.closest('.select2-niveis');
            if (select) ultimoNivelFocado = parseInt(select.dataset.nivel) || 1;
        });

        if(btnAbrirNovoNivel) {
            btnAbrirNovoNivel.addEventListener('click', () => {
                const nivel = ultimoNivelFocado || 1;
                const $placeholder = $('#modal-nivel-placeholder');
                $.get('/Niveis/NovoNivelPartial', { nivel })
                    .done(html => {
                        $placeholder.html(html);
                        const $modal = $placeholder.find('.modal');
                        const $form = $placeholder.find('form');
                        if ($.validator && $.validator.unobtrusive) $.validator.unobtrusive.parse($form);
                        
                        const modal = new bootstrap.Modal($modal[0]);
                        modal.show();

                        $form.on('submit', function (e) {
                            e.preventDefault();
                            if (!$form.valid()) return;
                            $.ajax({
                                url: $form.attr('action'),
                                type: $form.attr('method'),
                                data: $form.serialize(),
                                success: function (response) {
                                    const modalInstance = bootstrap.Modal.getInstance($modal[0]);
                                    modalInstance.hide();
                                    Swal.fire({ icon: 'success', title: 'Sucesso!', text: response.message, timer: 1500 });
                                },
                                error: function (xhr) {
                                    let msg = "Falha ao salvar.";
                                    if(xhr.responseText) msg = xhr.responseText;
                                    Swal.fire({ icon: 'error', title: 'Erro', text: msg });
                                }
                            });
                        });
                        $modal.on('hidden.bs.modal', function () { $(this).remove(); });
                    });
            });
        }

        btnSalvarDetalhamento.addEventListener('click', () => {
            syncSelectionsIntoData();
            if (!validateAllSelected()) return;
            if (!validateGlobalDuplicates()) return;

            calcularTotaisNosDados();
            detalhamentoJsonInput.value = JSON.stringify(detalhamento);
            const mElem = document.getElementById('modalDetalhamento');
            const inst = bootstrap.Modal.getInstance(mElem);
            if (inst) inst.hide();
        });

        // ---------- INICIALIZAÇÃO ----------
        const valorInicial = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ValorPrevistoTotal));
        valorTotalInput.value = toBR(valorInicial);
        
        aplicarMascaras();
        calcularTotaisNosDados();
        detalhamentoJsonInput.value = JSON.stringify(detalhamento);
        renderizarArvore();
        syncSelectionsIntoData();
        atualizarVisuaisMensais();
        
        if (hasSwal) {
            if ("@TempData["Sucesso"]") Swal.fire({ icon: 'success', title: 'Sucesso', text: "@TempData["Sucesso"]" });
            if ("@TempData["Erro"]") Swal.fire({ icon: 'error', title: 'Ops', text: "@TempData["Erro"]" });
        }
    });
    </script>
}